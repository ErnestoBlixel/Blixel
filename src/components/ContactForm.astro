---

<div class="gravity-form-container">
  <iframe 
    id="gravity-form-iframe"
    src="https://cms.blixel.es/formulario-embed/"
    width="100%" 
    height="700"
    frameborder="0"
    scrolling="no"
    style="border: none; overflow: hidden; background: transparent;">
  </iframe>
</div>

<script>
  // Auto-ajustar altura del iframe
  window.addEventListener('message', function(e) {
    const iframe = document.getElementById('gravity-form-iframe');
    if (e.data && e.data.height && iframe) {
      iframe.style.height = e.data.height + 'px';
    }
  });
</script>

<style>
  .gravity-form-container {
    width: 100%;
    max-width: 100%;
  }
  
  #gravity-form-iframe {
    background: transparent;
    width: 100%;
  }
</style>
