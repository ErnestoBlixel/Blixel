---
// Componente simple para mostrar el formulario de contacto
interface Props {
  title?: string;
  description?: string;
  showTrustBadges?: boolean;
}

const { 
  title = 'Solicita tu Diagn√≥stico de IA para Empresas',
  description = 'Obt√©n un an√°lisis personalizado de c√≥mo la inteligencia artificial puede transformar tu empresa. Sin compromiso, con resultados medibles en 90 d√≠as.',
  showTrustBadges = true
} = Astro.props;

// URL del formulario en WordPress - probando diferentes opciones
const formUrl = 'https://cms.blixel.es/?gf_page=preview&id=1';
// Alternativas:
// const formUrl = 'https://cms.blixel.es/?gf_page=embed&id=1';
// const formUrl = 'https://cms.blixel.es/wp-admin/admin-ajax.php?action=gf_embed_form&id=1';
---

<section id="contact-form" class="contact-form-section">
  <div class="container">
    <div class="form-content">
      <div class="form-header">
        <h2 class="form-title">{title}</h2>
        {description && <p class="form-description">{description}</p>}
      </div>

      <div class="form-wrapper">
        <!-- Iframe de Gravity Forms -->
        <iframe 
          src={formUrl}
          width="100%" 
          height="800"
          frameborder="0"
          scrolling="auto"
          class="gravity-form-iframe"
          style="border: none; overflow: hidden;"
          title="Formulario de contacto"
        ></iframe>
      </div>

      {showTrustBadges && (
        <div class="trust-badges">
          <div class="trust-item">
            <div class="trust-icon">üîí</div>
            <span>Datos 100% seguros</span>
          </div>
          <div class="trust-item">
            <div class="trust-icon">‚ö°</div>
            <span>Respuesta en 24h</span>
          </div>
          <div class="trust-item">
            <div class="trust-icon">üéØ</div>
            <span>Sin compromiso</span>
          </div>
          <div class="trust-item">
            <div class="trust-icon">‚úÖ</div>
            <span>Resultados garantizados</span>
          </div>
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .contact-form-section {
    padding: 5rem 0;
    background: #0a0a0a;
    position: relative;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .form-content {
    text-align: center;
  }

  .form-header {
    margin-bottom: 3rem;
  }

  .form-title {
    font-family: 'Inter Tight', sans-serif;
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    background: linear-gradient(135deg, #60a5fa 0%, #a855f7 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .form-description {
    font-size: 1.125rem;
    color: #a3a3a3;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }

  .form-wrapper {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    padding: 2rem;
    backdrop-filter: blur(8px);
    margin-bottom: 2rem;
    position: relative;
  }

  .gravity-form-iframe {
    border-radius: 12px;
    background: #ffffff;
    min-height: 600px;
  }

  /* Loading indicator */
  .form-wrapper::before {
    content: 'Cargando formulario...';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #737373;
    font-size: 0.875rem;
    z-index: 0;
  }

  .gravity-form-iframe.loaded + .form-wrapper::before {
    display: none;
  }

  .trust-badges {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
    margin-top: 2rem;
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #a3a3a3;
    font-size: 0.875rem;
    justify-content: center;
  }

  .trust-icon {
    width: 32px;
    height: 32px;
    background: rgba(96, 165, 250, 0.1);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .contact-form-section {
      padding: 3rem 0;
    }

    .container {
      padding: 0 1rem;
    }

    .form-wrapper {
      padding: 1.5rem;
    }

    .gravity-form-iframe {
      min-height: 700px;
    }

    .trust-badges {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .form-title {
      font-size: 1.75rem;
    }

    .form-description {
      font-size: 1rem;
    }

    .gravity-form-iframe {
      min-height: 750px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const iframe = document.querySelector('.gravity-form-iframe');
    
    if (iframe) {
      // Marcar como cargado cuando el iframe se carga
      iframe.addEventListener('load', function() {
        iframe.classList.add('loaded');
        console.log('‚úÖ Formulario cargado correctamente');
      });

      // Manejar errores
      iframe.addEventListener('error', function() {
        console.error('‚ùå Error al cargar el formulario');
      });

      // Analytics tracking
      if (typeof gtag !== 'undefined') {
        gtag('event', 'form_view', {
          'event_category': 'engagement',
          'event_label': 'Gravity Forms - Diagn√≥stico IA'
        });
      }
    }
  });
</script>
