<style>
  .intro-section {
    padding: 6rem 0;
    background: #0d0d0d;
    position: relative;
    overflow: hidden;
  }

  .intro-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(96, 165, 250, 0.3), transparent);
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .intro-content {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: rgba(96, 165, 250, 0.1);
    border: 1px solid rgba(96, 165, 250, 0.2);
    border-radius: 50px;
    color: #60a5fa;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 2rem;
  }

  .intro-title {
    font-family: 'Inter Tight', sans-serif;
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    line-height: 1.2;
    color: #e5e5e5;
    margin-bottom: 3rem;
    text-align: center;
  }

  .gradient-text {
    background: linear-gradient(135deg, #60a5fa 0%, #a855f7 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .intro-grid {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 4rem;
    align-items: center;
  }

  .intro-text {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .intro-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: #d4d4d4;
  }

  .intro-description strong {
    color: #60a5fa;
  }

  .market-stat {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    backdrop-filter: blur(8px);
  }

  .stat-icon {
    font-size: 2rem;
  }

  .stat-content {
    display: flex;
    flex-direction: column;
  }

  .stat-number {
    font-family: 'Inter Tight', sans-serif;
    font-size: 2rem;
    font-weight: 700;
    color: #60a5fa;
    line-height: 1;
  }

  .stat-label {
    font-size: 0.875rem;
    color: #a3a3a3;
    line-height: 1.4;
  }

  .benefits-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .benefit-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: #d4d4d4;
  }

  .benefit-icon {
    width: 40px;
    height: 40px;
    background: rgba(96, 165, 250, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  /* Visual diagram */
  .intro-visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .ai-diagram {
    position: relative;
    width: 300px;
    height: 300px;
  }

  .central-node {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120px;
    height: 120px;
    background: linear-gradient(135deg, #60a5fa 0%, #a855f7 100%);
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    box-shadow: 0 0 40px rgba(96, 165, 250, 0.3);
    animation: central-pulse 3s ease-in-out infinite;
  }

  .central-node .node-icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .central-node span {
    font-size: 0.875rem;
    text-align: center;
  }

  .connection-nodes {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .connection-node {
    position: absolute;
    width: 80px;
    height: 80px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #e5e5e5;
    font-size: 0.75rem;
    text-align: center;
    backdrop-filter: blur(8px);
    opacity: 0;
    transform: scale(0.8);
    animation: node-appear 600ms ease forwards;
  }

  .connection-node:nth-child(1) {
    top: 0;
    left: 50%;
    transform: translateX(-50%) scale(0.8);
  }

  .connection-node:nth-child(2) {
    top: 50%;
    right: 0;
    transform: translateY(-50%) scale(0.8);
  }

  .connection-node:nth-child(3) {
    bottom: 0;
    left: 50%;
    transform: translateX(-50%) scale(0.8);
  }

  .connection-node:nth-child(4) {
    top: 50%;
    left: 0;
    transform: translateY(-50%) scale(0.8);
  }

  .connection-node .node-icon {
    font-size: 1.5rem;
    margin-bottom: 0.25rem;
  }

  /* L√≠neas de conexi√≥n */
  .connection-node::before {
    content: '';
    position: absolute;
    width: 2px;
    height: 50px;
    background: linear-gradient(to bottom, #60a5fa, transparent);
    opacity: 0.3;
  }

  .connection-node:nth-child(1)::before {
    bottom: -50px;
    left: 50%;
    transform: translateX(-50%);
  }

  .connection-node:nth-child(2)::before {
    left: -50px;
    top: 50%;
    transform: translateY(-50%) rotate(90deg);
  }

  .connection-node:nth-child(3)::before {
    top: -50px;
    left: 50%;
    transform: translateX(-50%) rotate(180deg);
  }

  .connection-node:nth-child(4)::before {
    right: -50px;
    top: 50%;
    transform: translateY(-50%) rotate(-90deg);
  }

  /* Animaciones */
  @keyframes central-pulse {
    0%, 100% {
      box-shadow: 0 0 40px rgba(96, 165, 250, 0.3);
    }
    50% {
      box-shadow: 0 0 60px rgba(96, 165, 250, 0.5);
    }
  }

  @keyframes node-appear {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .intro-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }

    .intro-title {
      text-align: center;
    }
  }

  @media (max-width: 768px) {
    .intro-section {
      padding: 4rem 0;
    }

    .container {
      padding: 0 1rem;
    }

    .ai-diagram {
      width: 250px;
      height: 250px;
    }

    .central-node {
      width: 100px;
      height: 100px;
    }

    .connection-node {
      width: 60px;
      height: 60px;
    }

    .connection-node .node-icon {
      font-size: 1.25rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Animaci√≥n escalonada de nodos de conexi√≥n
    const connectionNodes = document.querySelectorAll('.connection-node');
    connectionNodes.forEach((node, index) => {
      const delay = parseInt(node.dataset.delay) || 0;
      node.style.animationDelay = `${delay}ms`;
    });

    // Intersection Observer para animaciones on scroll
    const observerOptions = {
      threshold: 0.3,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-in');
        }
      });
    }, observerOptions);

    // Observar elementos para animaci√≥n
    const animatedElements = document.querySelectorAll('.market-stat, .benefit-item');
    animatedElements.forEach(el => observer.observe(el));
  });
</script>
