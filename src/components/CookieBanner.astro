<script>
  // Sistema de gesti√≥n de cookies compatible con RGPD
  const CookieManager = {
    // Configuraci√≥n de cookies
    config: {
      technical: true, // Siempre activas
      analytics: false,
      advertising: false
    },

    // Nombres de las cookies
    cookieNames: {
      consent: 'blixel_consent',
      preferences: 'blixel_preferences'
    },

    // Duraci√≥n del consentimiento (1 a√±o)
    consentDuration: 365,

    // Inicializar sistema de cookies
    init() {
      // Verificar si ya hay consentimiento
      const hasConsent = this.getConsent();
      
      if (!hasConsent) {
        // Mostrar banner si no hay consentimiento
        this.showBanner();
      } else {
        // Cargar scripts seg√∫n preferencias
        this.loadScripts();
        // Mostrar bot√≥n flotante
        this.showFloatingButton();
      }

      // Configurar event listeners
      this.setupEventListeners();
    },

    // Obtener consentimiento guardado
    getConsent() {
      return this.getCookie(this.cookieNames.consent);
    },

    // Obtener preferencias guardadas
    getPreferences() {
      const prefs = this.getCookie(this.cookieNames.preferences);
      if (prefs) {
        try {
          return JSON.parse(prefs);
        } catch (e) {
          return null;
        }
      }
      return null;
    },

    // Guardar consentimiento
    saveConsent(preferences) {
      // Guardar cookie de consentimiento
      this.setCookie(this.cookieNames.consent, 'true', this.consentDuration);
      
      // Guardar preferencias
      this.setCookie(
        this.cookieNames.preferences, 
        JSON.stringify(preferences), 
        this.consentDuration
      );

      // Actualizar configuraci√≥n
      this.config = { ...this.config, ...preferences };

      // Cargar scripts seg√∫n las nuevas preferencias
      this.loadScripts();
    },

    // Mostrar banner
    showBanner() {
      const banner = document.getElementById('cookie-banner');
      if (banner) {
        // Bloquear scroll del body
        document.body.style.overflow = 'hidden';
        banner.classList.remove('hidden');
      }
    },

    // Ocultar banner
    hideBanner() {
      const banner = document.getElementById('cookie-banner');
      if (banner) {
        banner.classList.add('hidden');
        // Restaurar scroll del body
        document.body.style.overflow = '';
      }
      this.showFloatingButton();
    },

    // Mostrar bot√≥n flotante
    showFloatingButton() {
      const button = document.getElementById('cookie-settings-float');
      if (button) {
        setTimeout(() => {
          button.classList.remove('hidden');
        }, 500);
      }
    },

    // Ocultar bot√≥n flotante
    hideFloatingButton() {
      const button = document.getElementById('cookie-settings-float');
      if (button) {
        button.classList.add('hidden');
      }
    },

    // Mostrar modal de configuraci√≥n
    showModal() {
      const modal = document.getElementById('cookie-modal');
      if (modal) {
        modal.classList.remove('hidden');
        
        // Cargar preferencias actuales
        const prefs = this.getPreferences() || this.config;
        document.getElementById('analytics-cookies').checked = prefs.analytics;
        document.getElementById('advertising-cookies').checked = prefs.advertising;
      }
    },

    // Ocultar modal
    hideModal() {
      const modal = document.getElementById('cookie-modal');
      if (modal) {
        modal.classList.add('hidden');
      }
    },

    // Cargar scripts seg√∫n las preferencias
    loadScripts() {
      const prefs = this.getPreferences() || this.config;

      // Google Analytics
      if (prefs.analytics) {
        this.loadGoogleAnalytics();
      }

      // Facebook Pixel
      if (prefs.advertising) {
        this.loadFacebookPixel();
      }
    },

    // Cargar Google Analytics
    loadGoogleAnalytics() {
      // ID real de Google Analytics para Blixel
      const GA_ID = 'G-GN6G2XHNTL';
      
      if (window.gtag) return; // Ya est√° cargado

      const script = document.createElement('script');
      script.async = true;
      script.src = `https://www.googletagmanager.com/gtag/js?id=${GA_ID}`;
      document.head.appendChild(script);

      window.dataLayer = window.dataLayer || [];
      window.gtag = function() { dataLayer.push(arguments); };
      window.gtag('js', new Date());
      window.gtag('config', GA_ID, {
        'anonymize_ip': true, // Anonimizar IP para RGPD
        'cookie_flags': 'SameSite=None;Secure'
      });

      console.log('‚úÖ Google Analytics cargado');
    },

    // Cargar Facebook Pixel
    loadFacebookPixel() {
      // Reemplaza 'FB_PIXEL_ID' con tu ID real
      const FB_PIXEL_ID = 'FB_PIXEL_ID';
      
      if (window.fbq) return; // Ya est√° cargado

      !function(f,b,e,v,n,t,s){
        if(f.fbq)return;n=f.fbq=function(){n.callMethod?
        n.callMethod.apply(n,arguments):n.queue.push(arguments)};
        if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
        n.queue=[];t=b.createElement(e);t.async=!0;
        t.src=v;s=b.getElementsByTagName(e)[0];
        s.parentNode.insertBefore(t,s)
      }(window, document,'script',
        'https://connect.facebook.net/en_US/fbevents.js');
      
      window.fbq('init', FB_PIXEL_ID);
      window.fbq('track', 'PageView');

      console.log('‚úÖ Facebook Pixel cargado');
    },

    // Configurar event listeners
    setupEventListeners() {
      // Bot√≥n aceptar todo
      document.getElementById('cookie-accept-btn')?.addEventListener('click', () => {
        this.saveConsent({
          technical: true,
          analytics: true,
