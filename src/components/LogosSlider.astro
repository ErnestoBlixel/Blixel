---
// Componente de slider de logos de tecnologías IA
const logos = [
  { src: 'https://upload.wikimedia.org/wikipedia/commons/thumb/4/44/Microsoft_logo.svg/2048px-Microsoft_logo.svg.png', alt: 'Microsoft' },
  { src: 'https://upload.wikimedia.org/wikipedia/commons/thumb/8/8a/Google_Gemini_logo.svg/2560px-Google_Gemini_logo.svg.png', alt: 'Gemini' },
  { src: 'https://avatars.githubusercontent.com/u/45487711?s=200&v=4', alt: 'n8n', rounded: true },
  { src: 'https://upload.wikimedia.org/wikipedia/commons/thumb/c/c3/Python-logo-notext.svg/1869px-Python-logo-notext.svg.png', alt: 'Python' },
  { src: 'https://avatars.githubusercontent.com/u/139558948?s=200&v=4', alt: 'DeepSeek', rounded: true },
  { src: 'https://upload.wikimedia.org/wikipedia/commons/thumb/1/13/Anthropic_logo.svg/2560px-Anthropic_logo.svg.png', alt: 'Claude' },
  { src: 'https://upload.wikimedia.org/wikipedia/commons/thumb/0/04/ChatGPT_logo.svg/1024px-ChatGPT_logo.svg.png', alt: 'ChatGPT' },
  { src: 'https://upload.wikimedia.org/wikipedia/commons/thumb/e/e5/TensorFlow_Logo_with_text.png/1594px-TensorFlow_Logo_with_text.png', alt: 'TensorFlow' },
  // Duplicamos para el efecto infinito
  { src: 'https://upload.wikimedia.org/wikipedia/commons/thumb/4/44/Microsoft_logo.svg/2048px-Microsoft_logo.svg.png', alt: 'Microsoft' },
  { src: 'https://upload.wikimedia.org/wikipedia/commons/thumb/8/8a/Google_Gemini_logo.svg/2560px-Google_Gemini_logo.svg.png', alt: 'Gemini' },
  { src: 'https://avatars.githubusercontent.com/u/45487711?s=200&v=4', alt: 'n8n', rounded: true },
  { src: 'https://upload.wikimedia.org/wikipedia/commons/thumb/c/c3/Python-logo-notext.svg/1869px-Python-logo-notext.svg.png', alt: 'Python' },
  { src: 'https://avatars.githubusercontent.com/u/139558948?s=200&v=4', alt: 'DeepSeek', rounded: true },
  { src: 'https://upload.wikimedia.org/wikipedia/commons/thumb/1/13/Anthropic_logo.svg/2560px-Anthropic_logo.svg.png', alt: 'Claude' },
  { src: 'https://upload.wikimedia.org/wikipedia/commons/thumb/0/04/ChatGPT_logo.svg/1024px-ChatGPT_logo.svg.png', alt: 'ChatGPT' },
  { src: 'https://upload.wikimedia.org/wikipedia/commons/thumb/e/e5/TensorFlow_Logo_with_text.png/1594px-TensorFlow_Logo_with_text.png', alt: 'TensorFlow' },
];
---

<div class="logos-slider-wrapper">
  <p class="logos-text">Tecnologías de IA que dominamos</p>
  <div class="logos-slider-container">
    <div class="logos-slider">
      <div class="slider-track">
      {logos.map((logo) => (
        <div class="logo-item">
          <img src={logo.src} alt={logo.alt} class={logo.rounded ? 'rounded' : ''} />
        </div>
      ))}
      </div>
    </div>
  </div>
</div>

<style>
  /* Wrapper para el slider completo */
  .logos-slider-wrapper {
    width: 100%;
    background: transparent;
    position: relative;
    padding: 2rem 0;
  }

  /* Texto descriptivo */
  .logos-text {
    text-align: center;
    color: #6b7280;
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  /* Container principal con max-width */
  .logos-slider-container {
    max-width: 100vw;
    margin: 0 auto;
    position: relative;
    overflow: hidden;
  }

  .logos-slider {
    position: relative;
    overflow: hidden;
    width: 100%;
  }

  /* Gradientes para fade en los bordes */
  .logos-slider::before,
  .logos-slider::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100px;
    z-index: 2;
    pointer-events: none;
  }

  .logos-slider::before {
    left: 0;
    background: linear-gradient(to right, #000000 0%, transparent 100%);
  }

  .logos-slider::after {
    right: 0;
    background: linear-gradient(to left, #000000 0%, transparent 100%);
  }

  .slider-track {
    display: flex;
    animation: scroll 30s linear infinite;
    width: fit-content;
  }

  .logo-item {
    flex: 0 0 auto;
    padding: 0 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-item img {
    height: 40px;
    width: auto;
    max-width: 120px;
    object-fit: contain;
    filter: grayscale(100%) invert(1) opacity(0.4);
    transition: all 0.3s ease;
  }

  .logo-item img.rounded {
    border-radius: 10px;
  }

  .logo-item:hover img {
    filter: grayscale(0%) invert(0) opacity(0.8);
    transform: scale(1.1);
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Pausar al hover */
  .logos-slider:hover .slider-track {
    animation-play-state: paused;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .logos-slider-wrapper {
      padding: 1.5rem 0;
    }

    .logos-text {
      font-size: 0.75rem;
      margin-bottom: 1rem;
    }

    .logos-slider::before,
    .logos-slider::after {
      width: 50px;
    }

    .logo-item {
      padding: 0 2rem;
    }

    .logo-item img {
      height: 30px;
    }
  }

  @media (max-width: 480px) {
    .logo-item {
      padding: 0 1.5rem;
    }

    .logo-item img {
      height: 25px;
    }

    .logos-slider::before,
    .logos-slider::after {
      width: 30px;
    }
  }
</style>
