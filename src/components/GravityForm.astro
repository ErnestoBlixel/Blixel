---
interface Props {
  formId: number;
  title?: string;
  description?: string;
  className?: string;
}

const { formId, title, description, className = '' } = Astro.props;

// URL directa del formulario (la más probable que funcione)
const formUrl = `https://cms.blixel.es/?gf_page=embed&id=${formId}`;
---

<section class={`gravity-form-section ${className}`} id="diagnostico-form">
  <div class="container">
    {title && (
      <div class="form-header">
        <h2 class="form-title">{title}</h2>
        {description && <p class="form-description">{description}</p>}
      </div>
    )}
    
    <div class="form-container">
      <!-- Método 1: iframe (más compatible) -->
      <iframe 
        src={formUrl}
        width="100%" 
        height="800"
        frameborder="0"
        scrolling="no"
        class="gravity-form-iframe"
        loading="lazy"
        title={`Formulario ${title || 'Gravity Forms'}`}
      ></iframe>
      
      <!-- Método 2: Contenedor para carga dinámica (opcional) -->
      <div id="gf-embed-container" class="gf-embed-container hidden">
        <!-- El formulario se cargará aquí dinámicamente -->
      </div>
    </div>
  </div>
</section>

<style>
  .gravity-form-section {
    background: #000000;
    padding: 4rem 0;
    color: #e5e5e5;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .form-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .form-title {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #02aa6d 0%, #0ea5e9 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .form-description {
    font-size: 1.125rem;
    color: #a0a0a0;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .form-container {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    padding: 2rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }

  .gravity-form-iframe {
    border-radius: 12px;
    background: #ffffff;
    min-height: 600px;
    transition: opacity 0.3s ease;
  }

  .gravity-form-iframe:not(.loaded) {
    opacity: 0.7;
  }

  .hidden {
    display: none;
  }

  .gf-embed-container {
    min-height: 400px;
  }

  /* Estilos responsivos */
  @media (max-width: 768px) {
    .gravity-form-section {
      padding: 2rem 0;
    }

    .form-title {
      font-size: 2rem;
    }

    .form-container {
      padding: 1rem;
      border-radius: 12px;
    }

    .gravity-form-iframe {
      height: 700px;
    }
  }

  @media (max-width: 480px) {
    .form-title {
      font-size: 1.75rem;
    }

    .form-description {
      font-size: 1rem;
    }

    .gravity-form-iframe {
      height: 750px;
    }
  }

  /* Estilos para mejorar la accesibilidad */
  .gravity-form-iframe:focus {
    outline: 2px solid #02aa6d;
    outline-offset: 2px;
  }

  /* Animación de carga */
  .form-container::before {
    content: '';
    display: block;
    width: 40px;
    height: 40px;
    border: 3px solid rgba(2, 170, 109, 0.3);
    border-top: 3px solid #02aa6d;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 2rem auto;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .form-container.loading::before {
    opacity: 1;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const iframe = document.querySelector('.gravity-form-iframe');
    const container = document.querySelector('.form-container');
    
    if (iframe && container) {
      // Mostrar indicador de carga
      container.classList.add('loading');
      
      // Manejar la carga del iframe
      iframe.addEventListener('load', function() {
        console.log('✅ Formulario Gravity Forms cargado');
        container.classList.remove('loading');
        iframe.classList.add('loaded');
        
        // Opcional: Ajustar altura automáticamente
        try {
          // Intentar comunicarse con el iframe para ajustar altura
          iframe.style.height = 'auto';
        } catch (e) {
          console.log('ℹ️ No se puede ajustar altura automáticamente (CORS)');
        }
      });

      // Manejar errores de carga
      iframe.addEventListener('error', function() {
        console.error('❌ Error cargando el formulario Gravity Forms');
        container.classList.remove('loading');
        
        // Mostrar mensaje de error
        const errorMsg = document.createElement('div');
        errorMsg.innerHTML = `
          <p style="text-align: center; color: #ef4444; padding: 2rem;">
            Error al cargar el formulario. 
            <a href="${iframe.src}" target="_blank" style="color: #02aa6d; text-decoration: underline;">
              Abrir en nueva ventana
            </a>
          </p>
        `;
        container.appendChild(errorMsg);
      });

      // Opcional: Método alternativo usando shortcode
      // Si el iframe falla, podemos intentar cargar el formulario via API
      setTimeout(() => {
        if (!iframe.classList.contains('loaded')) {
          console.log('⚠️ El iframe está tardando, considerando método alternativo...');
          // Aquí podrías implementar un fetch del shortcode
        }
      }, 5000);
    }

    // Analytics tracking para el formulario
    if (typeof gtag !== 'undefined') {
      gtag('event', 'form_view', {
        'event_category': 'engagement',
        'event_label': 'Gravity Forms - Diagnóstico IA'
      });
    }
  });
</script>
