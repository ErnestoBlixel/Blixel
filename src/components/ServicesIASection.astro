    color: #60a5fa;
    text-decoration: none;
    font-weight: 500;
    transition: all 200ms ease;
  }

  .service-cta:hover {
    color: #93c5fd;
    transform: translateX(4px);
  }

  .service-cta svg {
    transition: transform 200ms ease;
  }

  .service-cta:hover svg {
    transform: translateX(2px);
  }

  /* Secci√≥n de departamentos */
