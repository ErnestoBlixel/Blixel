<style>
  .services-ia-section {
    padding: 6rem 0;
    background: #171717;
    position: relative;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .services-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: rgba(96, 165, 250, 0.1);
    border: 1px solid rgba(96, 165, 250, 0.2);
    border-radius: 50px;
    color: #60a5fa;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
  }

  .services-title {
    font-family: 'Inter Tight', sans-serif;
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    line-height: 1.2;
    color: #e5e5e5;
    margin-bottom: 1.5rem;
  }

  .gradient-text {
    background: linear-gradient(135deg, #60a5fa 0%, #a855f7 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .services-description {
    font-size: 1.125rem;
    color: #a3a3a3;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 5rem;
  }

  .service-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 24px;
    padding: 2rem;
    backdrop-filter: blur(8px);
    transition: all 400ms cubic-bezier(0.22, 0.61, 0.36, 1);
    position: relative;
    overflow: hidden;
  }

  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(96, 165, 250, 0.3), transparent);
    opacity: 0;
    transition: opacity 300ms ease;
  }

  .service-card:hover {
    transform: translateY(-8px);
    border-color: rgba(96, 165, 250, 0.2);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .service-card:hover::before {
    opacity: 1;
  }

  .service-card.featured {
    border-color: rgba(96, 165, 250, 0.3);
    background: rgba(96, 165, 250, 0.05);
  }

  .card-header {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 1.5rem;
    position: relative;
  }

  .service-icon {
    width: fit-content;
  }

  .icon-background {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #60a5fa 0%, #a855f7 100%);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    box-shadow: 0 8px 25px rgba(96, 165, 250, 0.25);
  }

  .card-header h3 {
    font-family: 'Inter Tight', sans-serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: #e5e5e5;
    line-height: 1.3;
  }

  .featured-badge {
    position: absolute;
    top: -1rem;
    right: -1rem;
    background: linear-gradient(135deg, #60a5fa 0%, #a855f7 100%);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0 24px 0 16px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .card-content {
