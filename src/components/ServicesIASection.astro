    font-size: 1.5rem;
    font-weight: 600;
    color: #e5e5e5;
    margin-bottom: 2rem;
  }

  .departments-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .department-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    padding: 1.5rem 1rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    transition: all 300ms ease;
    backdrop-filter: blur(8px);
  }

  .department-item:hover {
    transform: translateY(-4px);
    border-color: rgba(96, 165, 250, 0.2);
    background: rgba(96, 165, 250, 0.05);
  }

  .dept-icon {
    width: 50px;
    height: 50px;
    background: rgba(96, 165, 250, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
  }

  .department-item span {
    color: #d4d4d4;
    font-weight: 500;
    font-size: 0.95rem;
    text-align: center;
  }

  /* Animaciones de entrada */
  .service-card {
    opacity: 0;
    transform: translateY(30px);
    animation: card-reveal 600ms ease forwards;
  }

  .service-card:nth-child(1) { animation-delay: 0ms; }
  .service-card:nth-child(2) { animation-delay: 200ms; }
  .service-card:nth-child(3) { animation-delay: 400ms; }

  @keyframes card-reveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .services-ia-section {
      padding: 4rem 0;
    }

    .container {
      padding: 0 1rem;
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .service-card {
      padding: 1.5rem;
    }

    .departments-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .department-item {
      padding: 1rem;
    }

    .dept-icon {
      width: 40px;
      height: 40px;
      font-size: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .departments-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Intersection Observer para animaciones on scroll
    const observerOptions = {
      threshold: 0.2,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-in');
        }
      });
    }, observerOptions);

    // Observar cards de servicios
    const serviceCards = document.querySelectorAll('.service-card');
    serviceCards.forEach(card => observer.observe(card));

    // Observar departamentos
    const departmentItems = document.querySelectorAll('.department-item');
    departmentItems.forEach((item, index) => {
      item.style.animationDelay = `${index * 100}ms`;
      observer.observe(item);
    });

    // Efecto hover con Lottie-like animation
    serviceCards.forEach(card => {
      card.addEventListener('mouseenter', () => {
        const icon = card.querySelector('.icon-background');
        if (icon) {
          icon.style.transform = 'scale(1.1) rotate(5deg)';
        }
      });

      card.addEventListener('mouseleave', () => {
        const icon = card.querySelector('.icon-background');
        if (icon) {
          icon.style.transform = 'scale(1) rotate(0deg)';
        }
      });
    });
  });
</script>
