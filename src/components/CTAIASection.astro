<style>
  .cta-ia-section {
    padding: 8rem 0;
    background: #171717;
    position: relative;
    overflow: hidden;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 10;
  }

  .cta-content {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }

  .cta-header {
    margin-bottom: 4rem;
  }

  .section-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: rgba(96, 165, 250, 0.1);
    border: 1px solid rgba(96, 165, 250, 0.2);
    border-radius: 50px;
    color: #60a5fa;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 2rem;
  }

  .cta-title {
    font-family: 'Inter Tight', sans-serif;
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    line-height: 1.1;
    color: #e5e5e5;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .gradient-text {
    background: linear-gradient(135deg, #60a5fa 0%, #a855f7 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .cta-description {
    font-size: 1.25rem;
    line-height: 1.6;
    color: #a3a3a3;
    max-width: 700px;
    margin: 0 auto;
  }

  .cta-form-section {
    margin-bottom: 5rem;
  }

  .diagnostic-form {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 24px;
    padding: 3rem;
    backdrop-filter: blur(8px);
    margin-bottom: 3rem;
    transition: all 300ms ease;
  }

  .gravity-form-iframe {
    border: none;
    background: transparent;
    min-height: 500px;
  }

  .trust-badges {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: #d4d4d4;
    font-size: 0.95rem;
    justify-content: center;
  }

  .trust-icon {
    width: 40px;
    height: 40px;
    background: rgba(96, 165, 250, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
  }

  .spotlight-effect {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    opacity: 0;
    transition: opacity 300ms ease;
    background: radial-gradient(
      600px circle at var(--mouse-x, 50%) var(--mouse-y, 50%),
      rgba(96, 165, 250, 0.06) 0%,
      transparent 50%
    );
  }

  /* Responsive */
  @media (max-width: 768px) {
    .cta-ia-section {
      padding: 4rem 0;
    }

    .container {
      padding: 0 1rem;
    }

    .diagnostic-form {
      padding: 2rem 1.5rem;
    }

    .gravity-form-iframe {
      min-height: 400px;
    }

    .trust-badges {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Efecto spotlight
    const ctaSection = document.querySelector('.cta-ia-section');
    const spotlight = document.getElementById('ctaSpotlight');
    
    if (ctaSection && spotlight) {
      ctaSection.addEventListener('mousemove', (e) => {
        const rect = ctaSection.getBoundingClientRect();
        const x = ((e.clientX - rect.left) / rect.width) * 100;
        const y = ((e.clientY - rect.top) / rect.height) * 100;
        
        spotlight.style.setProperty('--mouse-x', `${x}%`);
        spotlight.style.setProperty('--mouse-y', `${y}%`);
        spotlight.style.opacity = '1';
      });
      
      ctaSection.addEventListener('mouseleave', () => {
        spotlight.style.opacity = '0';
      });
    }
  });
</script>
