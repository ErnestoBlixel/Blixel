<style>
  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .examples-section {
    background: #000;
    padding: 80px 20px;
    color: white;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .grid {
    display: grid;
    grid-template-columns: 450px 1fr;
    gap: 60px;
    align-items: center;
  }

  .card {
    transition: all 0.3s ease !important;
    cursor: pointer;
  }

  .card:hover {
    transform: translateY(-4px) !important;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2) !important;
  }

  @media (max-width: 1024px) {
    .grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .cards-container {
      max-width: 500px;
      margin: 0 auto;
    }
  }
</style>

<script>
  // Animación de rotación simple
  document.addEventListener('DOMContentLoaded', function() {
    const container = document.getElementById('animated-cards-list');
    if (!container) return;

    const cards = [
      { title: 'Factura procesada', desc: 'Sistema automático OCR', time: 'hace 2s' },
      { title: 'Email categorizado', desc: 'IA clasifica correos', time: 'hace 5s' },
      { title: 'Cliente atendido', desc: 'Chatbot resolvió consulta', time: 'hace 8s' },
      { title: 'Pedido procesado', desc: 'E-commerce 24/7', time: 'hace 12s' },
      { title: 'Cita agendada', desc: 'Reunión coordinada', time: 'hace 15s' },
      { title: 'Informe generado', desc: 'Dashboard actualizado', time: 'hace 18s' },
      { title: 'Lead cualificado', desc: 'IA identificó oportunidad', time: 'hace 20s' },
      { title: 'Stock actualizado', desc: 'Inventario sincronizado', time: 'hace 22s' }
    ];

    let index = 5;

    // Función para crear nueva tarjeta
    function addNewCard() {
      const cardData = cards[index % cards.length];
      
      const newCard = document.createElement('div');
      newCard.className = 'card';
      newCard.style.cssText = `
        background: white;
        border: 2px solid white;
        border-radius: 12px;
        padding: 12px 16px;
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        gap: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        animation: fadeInDown 0.5s ease-out;
      `;
      
      newCard.innerHTML = `
        <div style="width: 36px; height: 36px; background: #10b981; color: white; border-radius: 8px; display: flex; align-items: center; justify-content: center; font-weight: bold;">✓</div>
        <div style="flex: 1;">
          <h4 style="margin: 0; font-size: 14px; color: #000; font-weight: 600;">${cardData.title}</h4>
          <p style="margin: 2px 0 0 0; font-size: 12px; color: #666;">${cardData.desc}</p>
        </div>
        <span style="font-size: 11px; color: #999;">${cardData.time}</span>
      `;

      // Insertar al principio
      container.insertBefore(newCard, container.firstChild);

      // Remover la última tarjeta si hay más de 5
      if (container.children.length > 5) {
        const lastCard = container.lastChild;
        lastCard.style.opacity = '0';
        lastCard.style.transform = 'translateY(20px)';
        setTimeout(() => {
          lastCard.remove();
        }, 300);
      }

      index++;
    }

    // Añadir nueva tarjeta cada 3 segundos
    setInterval(addNewCard, 3000);
  });
</script>
