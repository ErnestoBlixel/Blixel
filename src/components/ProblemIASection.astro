<style>
  .problem-ia-section {
    padding: 6rem 0;
    background: #0d0d0d;
    position: relative;
    overflow: hidden;
  }

  .problem-ia-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(239, 68, 68, 0.3), transparent);
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .problem-content {
    display: grid;
    grid-template-columns: 0.8fr 1.2fr;
    gap: 6rem;
    align-items: center;
  }

  /* Visual del problema */
  .problem-visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .chart-container {
    position: relative;
    width: 350px;
    height: 350px;
  }

  .chart-title {
    text-align: center;
    color: #e5e5e5;
    font-weight: 600;
    margin-bottom: 2rem;
    font-size: 1.125rem;
  }

  .donut-chart {
    position: relative;
    width: 280px;
    height: 280px;
    border-radius: 50%;
    background: conic-gradient(
      #ef4444 0deg 151deg,
      #f97316 151deg 277deg,
      #64748b 277deg 360deg
    );
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    animation: chart-spin 3s ease-out;
  }

  .chart-center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 140px;
    height: 140px;
    background: #0d0d0d;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border: 2px solid rgba(255, 255, 255, 0.1);
  }

  .center-icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .center-text {
    color: #ef4444;
    font-weight: 600;
    font-size: 0.875rem;
    text-align: center;
  }

  .chart-segment {
    position: absolute;
    opacity: 0;
    animation: segment-appear 600ms ease forwards;
  }

  .chart-segment:nth-child(1) { animation-delay: 1s; }
  .chart-segment:nth-child(2) { animation-delay: 1.3s; }
  .chart-segment:nth-child(3) { animation-delay: 1.6s; }

  .chart-segment.automated {
    top: -20px;
    left: 50%;
    transform: translateX(-50%);
  }

  .chart-segment.strategic {
    bottom: 20px;
    right: -30px;
  }

  .chart-segment.other {
    bottom: 20px;
    left: -30px;
  }

  .segment-label {
    display: block;
    font-family: 'Inter Tight', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: #ef4444;
    text-align: center;
    margin-bottom: 0.25rem;
  }

  .segment-text {
    display: block;
    font-size: 0.75rem;
    color: #a3a3a3;
    text-align: center;
    max-width: 80px;
    line-height: 1.3;
  }

  /* Contenido del texto */
  .problem-text {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .problem-stat {
    font-family: 'Inter Tight', sans-serif;
    font-size: 1.125rem;
    color: #a3a3a3;
    line-height: 1.6;
  }

  .stat-highlight {
    color: #ef4444;
    font-weight: 700;
    font-size: 1.5rem;
  }

  .problem-title {
    font-family: 'Inter Tight', sans-serif;
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    line-height: 1.2;
    color: #e5e5e5;
  }

  .gradient-text {
    background: linear-gradient(135deg, #ef4444 0%, #f97316 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .problem-description {
    font-size: 1.125rem;
    color: #d4d4d4;
    line-height: 1.6;
  }

  .problem-description strong {
    color: #60a5fa;
  }

  .problems-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .problem-item {
    display: flex;
    gap: 1rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-left: 3px solid #ef4444;
    border-radius: 12px;
    backdrop-filter: blur(8px);
    transition: all 300ms ease;
    opacity: 0;
    transform: translateX(-30px);
    animation: problem-reveal 600ms ease forwards;
  }

  .problem-item:nth-child(1) { animation-delay: 0ms; }
  .problem-item:nth-child(2) { animation-delay: 200ms; }
  .problem-item:nth-child(3) { animation-delay: 400ms; }
  .problem-item:nth-child(4) { animation-delay: 600ms; }

  .problem-item:hover {
    transform: translateX(0) translateY(-2px);
    border-left-color: #60a5fa;
    background: rgba(239, 68, 68, 0.05);
  }

  .problem-icon {
    width: 50px;
    height: 50px;
    background: rgba(239, 68, 68, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .problem-content-item {
    flex: 1;
  }

  .problem-content-item h3 {
    font-family: 'Inter Tight', sans-serif;
    font-size: 1.125rem;
    font-weight: 600;
    color: #e5e5e5;
    margin-bottom: 0.5rem;
  }

  .problem-content-item p {
    color: #a3a3a3;
    line-height: 1.5;
    font-size: 0.95rem;
  }

  /* C√°lculo de costos */
  .cost-calculation {
    background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(249, 115, 22, 0.1));
    border: 1px solid rgba(239, 68, 68, 0.2);
    border-radius: 16px;
    padding: 2rem;
    backdrop-filter: blur(8px);
  }

  .cost-header h3 {
    font-family: 'Inter Tight', sans-serif;
    color: #e5e5e5;
    margin-bottom: 1rem;
    font-size: 1.125rem;
  }

  .cost-formula {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1rem;
    font-family: 'Inter Tight', sans-serif;
  }

  .formula-part {
    background: rgba(255, 255, 255, 0.05);
    color: #d4d4d4;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    font-weight: 500;
    font-size: 0.95rem;
  }

  .formula-operator {
    color: #ef4444;
    font-size: 1.25rem;
    font-weight: 700;
  }

  .formula-equals {
    color: #f97316;
    font-size: 1.25rem;
    font-weight: 700;
  }

  .formula-result {
    background: linear-gradient(135deg, #ef4444, #f97316);
    color: white;
    padding: 1rem 1.5rem;
    border-radius: 12px;
    font-weight: 700;
    font-size: 1.125rem;
    box-shadow: 0 8px 25px rgba(239, 68, 68, 0.25);
  }

  /* Animaciones */
  @keyframes chart-spin {
    from {
      transform: rotate(-90deg);
    }
    to {
      transform: rotate(0deg);
    }
  }

  @keyframes segment-appear {
    to {
      opacity: 1;
    }
  }

  @keyframes problem-reveal {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes text-reveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .problem-content {
      grid-template-columns: 1fr;
      gap: 4rem;
      text-align: center;
    }

    .chart-container {
      width: 300px;
      height: 300px;
    }

    .donut-chart {
      width: 240px;
      height: 240px;
    }

    .chart-center {
      width: 120px;
      height: 120px;
    }
  }

  @media (max-width: 768px) {
    .problem-ia-section {
      padding: 4rem 0;
    }

    .container {
      padding: 0 1rem;
    }

    .chart-container {
      width: 250px;
      height: 250px;
    }

    .donut-chart {
      width: 200px;
      height: 200px;
    }

    .chart-center {
      width: 100px;
      height: 100px;
    }

    .center-icon {
      font-size: 1.5rem;
    }

    .problem-item {
      padding: 1rem;
    }

    .cost-formula {
      flex-direction: column;
      align-items: stretch;
      text-align: center;
    }

    .formula-part,
    .formula-result {
      text-align: center;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Intersection Observer para animaciones
    const observerOptions = {
      threshold: 0.3,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-in');
        }
      });
    }, observerOptions);

    // Observar elementos para animaci√≥n
    const animatedElements = document.querySelectorAll('.problem-item, .cost-calculation, .chart-container');
    animatedElements.forEach(el => observer.observe(el));

    // Efecto de texto reveal on scroll
    const textElements = document.querySelectorAll('.problem-title, .problem-description');
    
    const textObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.opacity = '0';
          entry.target.style.transform = 'translateY(20px)';
          entry.target.style.animation = 'text-reveal 800ms ease forwards';
        }
      });
    }, { threshold: 0.5 });

    textElements.forEach(el => textObserver.observe(el));

    // Animaci√≥n de n√∫meros en el c√°lculo de costos
    const formulaResult = document.querySelector('.formula-result');
    
    if (formulaResult) {
      const resultObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            // Efecto de conteo animado
            const finalText = '‚Ç¨1.89M perdidos/a√±o';
            const duration = 2000;
            const steps = 50;
            const stepDuration = duration / steps;
            
            let currentStep = 0;
            formulaResult.textContent = '‚Ç¨0M perdidos/a√±o';
            
            const timer = setInterval(() => {
              currentStep++;
              const progress = currentStep / steps;
              const currentValue = Math.floor(1.89 * progress * 100) / 100;
              
              if (currentStep >= steps) {
                formulaResult.textContent = finalText;
                clearInterval(timer);
              } else {
                formulaResult.textContent = `‚Ç¨${currentValue}M perdidos/a√±o`;
              }
            }, stepDuration);
            
            resultObserver.unobserve(entry.target);
          }
        });
      }, { threshold: 0.8 });
      
      resultObserver.observe(formulaResult);
    }
  });
</script>
