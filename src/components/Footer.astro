---
// src/components/Footer.astro
// Footer minimalista que consume datos de WordPress

interface Props {
  siteTitle: string;
  siteDescription: string;
  siteIcon: string;
}

const { siteTitle, siteDescription, siteIcon } = Astro.props;
---

<footer class="main-footer">
  <div class="footer-container">
    <div class="footer-content">
      <!-- Logo y descripci칩n -->
      <div class="footer-brand">
        {siteIcon ? (
          <img src={siteIcon} alt={siteTitle} class="footer-logo" />
        ) : (
          <div class="footer-logo-text">{siteTitle}</div>
        )}
        <p class="footer-description">
          {siteDescription || "Transformamos empresas con inteligencia artificial"}
        </p>
      </div>

      <!-- Enlaces r치pidos -->
      <div class="footer-links">
        <h3>Enlaces R치pidos</h3>
        <ul>
          <li><a href="/servicios">Servicios</a></li>
          <li><a href="/sobre-nosotros">Sobre Nosotros</a></li>
          <li><a href="/blog">Blog</a></li>
          <li><a href="/contacto">Contacto</a></li>
        </ul>
      </div>

      <!-- Contacto -->
      <div class="footer-contact">
        <h3>Contacto</h3>
        <ul>
          <li>info@blixel.es</li>
          <li>+34 900 000 000</li>
          <li>Madrid, Espa침a</li>
        </ul>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; 2025 {siteTitle}. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>

<style>
  .main-footer {
    background: var(--bg-secondary, #1a1a1a);
    border-top: 1px solid var(--border-color, rgba(255, 255, 255, 0.1));
    margin-top: 4rem;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem 1rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 3rem;
    margin-bottom: 2rem;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-logo {
    width: 50px;
    height: 50px;
    object-fit: contain;
  }

  .footer-logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary, rgba(255, 255, 255, 0.9));
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .footer-description {
    color: var(--text-muted, rgba(255, 255, 255, 0.5));
    max-width: 300px;
    line-height: 1.6;
  }

  .footer-links h3,
  .footer-contact h3 {
    color: var(--text-primary, rgba(255, 255, 255, 0.9));
    margin-bottom: 1rem;
    font-size: 1.1rem;
    font-weight: 600;
  }

  .footer-links ul,
  .footer-contact ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-links a {
    color: var(--text-muted, rgba(255, 255, 255, 0.5));
    text-decoration: none;
    transition: color 0.2s ease;
    padding: 0.25rem 0;
  }

  .footer-links a:hover {
    color: var(--text-primary, rgba(255, 255, 255, 0.9));
  }

  .footer-contact li {
    color: var(--text-muted, rgba(255, 255, 255, 0.5));
    padding: 0.25rem 0;
  }

  .footer-bottom {
    border-top: 1px solid var(--border-color, rgba(255, 255, 255, 0.1));
    padding-top: 1.5rem;
    text-align: center;
    color: var(--text-muted, rgba(255, 255, 255, 0.5));
    font-size: 0.9rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-container {
      padding: 2rem 1rem 1rem;
    }

    .footer-brand {
      text-align: center;
    }

    .footer-description {
      max-width: none;
    }
  }

  @media (max-width: 480px) {
    .footer-container {
      padding: 1.5rem 1rem 0.5rem;
    }

    .footer-content {
      gap: 1.5rem;
    }

    .footer-logo {
      width: 40px;
      height: 40px;
    }
  }
</style>