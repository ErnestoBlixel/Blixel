---
// src/components/Hero.astro
export interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  variant?: 'default' | 'gradient' | 'dark' | 'minimal';
  showCTA?: boolean;
  ctaText?: string;
  ctaLink?: string;
}

const { 
  title, 
  subtitle,
  description,
  variant = 'gradient',
  showCTA = true,
  ctaText = 'Automatiza tu Empresa',
  ctaLink = '/contacto'
} = Astro.props;
---

<section class={`hero hero--${variant}`}>
  <div class="hero__container">
    <div class="hero__content">
      {subtitle && (
        <p class="hero__subtitle">{subtitle}</p>
      )}
      
      <h1 class="hero__title">
        {title}
      </h1>
      
      {description && (
        <p class="hero__description">{description}</p>
      )}
      
      {showCTA && (
        <div class="hero__actions">
          <a href={ctaLink} class="hero__cta">
            {ctaText}
            <svg class="hero__cta-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      )}
    </div>
    
    <!-- Elementos decorativos -->
    <div class="hero__decorations">
      <div class="hero__shape hero__shape--1"></div>
      <div class="hero__shape hero__shape--2"></div>
      <div class="hero__shape hero__shape--3"></div>
      <div class="hero__particles">
        {Array.from({length: 6}).map((_, i) => (
          <div class={`hero__particle hero__particle--${i + 1}`}></div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 4rem 2rem;
  }

  .hero__container {
    position: relative;
    max-width: 1200px;
    width: 100%;
    text-align: center;
    z-index: 10;
  }

  .hero__content {
    position: relative;
    z-index: 2;
  }

  .hero__subtitle {
    font-size: 1.1rem;
    font-weight: 500;
    margin-bottom: 1rem;
    opacity: 0.9;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }

  .hero__title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    animation: fadeInUp 0.8s ease-out 0.4s both;
  }

  .hero__description {
    font-size: 1.25rem;
    line-height: 1.6;
    margin-bottom: 2.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    opacity: 0.9;
    animation: fadeInUp 0.8s ease-out 0.6s both;
  }

  .hero__actions {
    animation: fadeInUp 0.8s ease-out 0.8s both;
  }

  .hero__cta {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 4px;
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    font-weight: 400;
    font-size: 1.1rem;
    transition: all 0.2s ease;
    position: relative;
  }

  .hero__cta:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.25);
    color: white;
  }

  .hero__cta-icon {
    transition: transform 0.2s ease;
  }

  .hero__cta:hover .hero__cta-icon {
    transform: translateX(3px);
  }

  /* Decoraciones minimalistas */
  .hero__decorations {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: 1;
  }

  .hero__shape {
    display: none; /* Oculto para dise単o minimalista */
  }

  .hero__particles {
    display: none; /* Oculto para dise単o minimalista */
  }

  .hero__particle {
    display: none; /* Oculto para dise単o minimalista */
  }

  /* Variantes del Hero */
  
  /* Gradient (default) */
  .hero--gradient {
    background: #0a0a0a;
    color: white;
  }

  /* Dark */
  .hero--dark {
    background: #0a0a0a;
    color: white;
  }

  /* Default/Light */
  .hero--default {
    background: #0a0a0a;
    color: white;
  }

  /* Minimal */
  .hero--minimal {
    background: #0a0a0a;
    color: white;
    min-height: 40vh;
  }

  .hero--minimal .hero__shape {
    display: none;
  }

  .hero--minimal .hero__cta {
    background: rgba(255, 255, 255, 0.05);
    color: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.15);
  }

  .hero--minimal .hero__cta:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.25);
    color: white;
  }

  /* Animaciones */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Animaciones eliminadas para dise単o minimalista */

  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      min-height: 50vh;
      padding: 3rem 1rem;
    }

    .hero__title {
      font-size: clamp(2rem, 12vw, 3rem);
    }

    .hero__description {
      font-size: 1.1rem;
      margin-bottom: 2rem;
    }

    .hero__cta {
      padding: 0.875rem 1.5rem;
      font-size: 1rem;
    }

    .hero__shape--1 {
      width: 120px;
      height: 120px;
    }

    .hero__shape--2 {
      width: 100px;
      height: 100px;
    }

    .hero__shape--3 {
      width: 80px;
      height: 80px;
    }
  }
</style>
