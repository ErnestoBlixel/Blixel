---
import LogosSlider from './LogosSlider.astro';

export interface Props {
  pageSlug?: string;
  customTitle?: string;
  customDescription?: string;
  titleLine1?: string;
  titleLine2?: string;
  logoUrl?: string;
  logoAlt?: string;
}

const {
  pageSlug = '/',
  customTitle,
  customDescription,
  titleLine1,
  titleLine2,
  logoUrl = 'https://cms.blixel.es/wp-content/uploads/2025/05/cropped-Copia-de-BLIXEL-STUDIO_logo-500500.png',
  logoAlt = 'BLIXEL logo'
} = Astro.props;

// Query para obtener datos de la página
const GQL = `
  query GetPageData($slug: ID!) {
    page(id: $slug, idType: URI) {
      title
      content
      seo {
        title
        metaDesc
        opengraphTitle
        opengraphDescription
      }
      featuredImage {
        node {
          sourceUrl
          altText
        }
      }
    }
  }
`;

let pageTitle = customTitle || 'Inteligencia Artificial para Empresas';
let pageDescription = customDescription || 'Automatización Inteligente para tu Empresa';

// Ejecutar GraphQL siempre que tengamos la URL configurada
if (import.meta.env.PUBLIC_WP_GRAPHQL_URL) {
  try {
    const res = await fetch(import.meta.env.PUBLIC_WP_GRAPHQL_URL, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ 
        query: GQL,
        variables: { slug: pageSlug }
      })
    });

    if (res.ok) {
      const result = await res.json();
      const page = result.data?.page;
      
      if (page && !customTitle && !customDescription) {
        pageTitle = page.title || pageTitle;
        pageDescription = page.seo?.metaDesc || pageDescription;
      }
    }
  } catch (error) {
    // Usar valores por defecto
  }
}

// Dividir título en líneas
let actualTitleLine1 = titleLine1;
let actualTitleLine2 = titleLine2;

if (!titleLine1 || !titleLine2) {
  if (pageTitle.includes('?')) {
    const parts = pageTitle.split('?');
    actualTitleLine1 = parts[0] + '?';
    actualTitleLine2 = parts[1]?.trim() || '';
  } else {
    const words = pageTitle.split(' ');
    const midPoint = Math.ceil(words.length / 2);
    actualTitleLine1 = words.slice(0, midPoint).join(' ');
    actualTitleLine2 = words.slice(midPoint).join(' ');
  }
}
---

<section class="hero">
  <div class="container">
    <!-- Logo -->
    <div class="logo-wrapper">
      <img src={logoUrl} alt={logoAlt} />
    </div>

    <!-- Título con efecto mejorado -->
    <h1 class="hero-title">
      <span class="line-1 typing-line">{actualTitleLine1}</span>
      <span class="line-2 typing-line">{actualTitleLine2}</span>
    </h1>

    <!-- Descripción -->
    <p class="hero-description">
      Inteligencia artificial en tu empresa HOY o quiebras mañana. ROI en 90 días. Mientras dudas, tu competencia factura.
    </p>

    <!-- CTAs -->
    <div class="hero-actions">
      <a href="#contacto" class="btn-primary">
        Contactar
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
      
      <a href="https://calendly.com/blixel" target="_blank" rel="noopener noreferrer" class="btn-secondary">
        Agendar Llamada
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="16" y1="2" x2="16" y2="6"></line>
          <line x1="8" y1="2" x2="8" y2="6"></line>
          <line x1="3" y1="10" x2="21" y2="10"></line>
        </svg>
      </a>
    </div>
  </div>

  <!-- Slider de logos -->
  <LogosSlider />
</section>

<style>
  /* Hero con márgenes ajustados */
  .hero {
    background: #000000;
    padding: 3rem 0 2rem; /* Un poco más de padding arriba */
    min-height: auto;
    text-align: center;
    margin-top: -80px;
    padding-top: calc(80px + 3rem); /* Más espacio después del header */
    position: relative;
    overflow: visible; /* Asegurar que no se corte nada */
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    overflow: visible; /* Evitar cortes */
  }

  /* Logo con animaciones y círculo */
  .logo-wrapper {
    margin-top: 3.5rem; /* Bajado más el logo */
    margin-bottom: 2.5rem;
    position: relative;
    display: inline-block;
  }

  /* Círculo decorativo detrás del logo con borde animado */
  .logo-wrapper::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120px;
    height: 120px;
    background: radial-gradient(circle, rgba(96, 165, 250, 0.3) 0%, rgba(168, 85, 247, 0.2) 50%, transparent 70%);
    border-radius: 50%;
    filter: blur(20px);
    animation: pulse 3s ease-in-out infinite;
    z-index: 0;
  }

  /* Borde animado adicional */
  .logo-wrapper::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100px;
    height: 100px;
    border: 2px solid transparent;
    border-radius: 50%;
    background: linear-gradient(45deg, #60a5fa, #a855f7, #60a5fa) border-box;
    -webkit-mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: destination-out;
    mask-composite: exclude;
    animation: rotate 3s linear infinite;
    z-index: 0;
  }

  @keyframes rotate {
    0% {
      transform: translate(-50%, -50%) rotate(0deg);
    }
    100% {
      transform: translate(-50%, -50%) rotate(360deg);
    }
  }

  @keyframes pulse {
    0%, 100% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 0.8;
    }
    50% {
      transform: translate(-50%, -50%) scale(1.2);
      opacity: 0.4;
    }
  }

  .logo-wrapper img {
    width: 80px;
    height: 80px;
    object-fit: contain;
    position: relative;
    z-index: 1;
    animation: floatRotate 6s ease-in-out infinite;
    transition: transform 0.3s ease;
    filter: drop-shadow(0 0 20px rgba(96, 165, 250, 0.6)) brightness(1.1);
  }

  @keyframes floatRotate {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    25% {
      transform: translateY(-10px) rotate(5deg);
    }
    50% {
      transform: translateY(0) rotate(0deg);
    }
    75% {
      transform: translateY(-5px) rotate(-5deg);
    }
  }

  .logo-wrapper:hover img {
    transform: scale(1.1) rotate(360deg);
    transition: transform 0.8s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  /* Título mejorado con mejor line-height */
  .hero-title {
    font-family: 'Inter', -apple-system, sans-serif;
    font-size: clamp(3.5rem, 7vw, 6rem); /* Más grande */
    font-weight: 800;
    line-height: 1.1; /* Mejor line-height para evitar cortes */
    margin: 0 0 2.5rem;
    letter-spacing: -0.03em;
    color: #ffffff; /* Color blanco sólido */
    text-shadow: 0 0 30px rgba(255, 255, 255, 0.5); /* Brillo sutil */
  }

  /* Hover effect para el título */
  .hero-title:hover {
    text-shadow: 0 0 40px rgba(255, 255, 255, 0.8);
    transform: scale(1.02);
    transition: all 0.3s ease;
  }

  .typing-line {
    display: block;
    position: relative;
    overflow: visible; /* Cambiado de hidden para evitar cortes */
    white-space: normal; /* Permitir wrap en móvil */
    padding: 0.1em 0; /* Pequeño padding para evitar cortes */
  }

  .line-1 {
    margin-bottom: 0.3em; /* Un poco más de espacio */
  }

  /* Efecto typing simplificado */
  @keyframes fadeInText {
    from {
      opacity: 0.7; /* Parcialmente visible desde el inicio */
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .line-1 {
    opacity: 1; /* Visible inmediatamente */
    animation: fadeInText 0.8s ease forwards;
    animation-delay: 0.1s; /* Delay reducido */
  }

  .line-2 {
    opacity: 1; /* Visible inmediatamente */
    animation: fadeInText 0.8s ease forwards;
    animation-delay: 0.3s; /* Delay reducido */
  }


  /* Descripción */
  .hero-description {
    font-size: 1.25rem;
    color: #9ca3af;
    max-width: 700px;
    margin: 0 auto 2.5rem; /* Más margen */
    line-height: 1.5;
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards;
    animation-delay: 1.5s;
  }

  /* Botones */
  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 3rem; /* Espacio para el slider */
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards;
    animation-delay: 1.8s;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .btn-primary,
  .btn-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .btn-primary {
    background: #ffffff;
    color: #000000;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 255, 255, 0.2);
  }

  .btn-secondary {
    background: transparent;
    color: #ffffff;
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.5);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      padding: 2rem 0 1.5rem;
      margin-top: -80px;
      padding-top: calc(80px + 2rem);
    }

    .container {
      padding: 0 1rem;
    }

    .logo-wrapper {
      margin-top: 2.5rem; /* Ajustado para móvil */
      margin-bottom: 2rem;
    }

    .logo-wrapper::before {
      width: 100px;
      height: 100px;
    }

    .logo-wrapper::after {
      width: 85px;
      height: 85px;
    }

    .logo-wrapper img {
      width: 70px;
      height: 70px;
    }

    .hero-title {
      font-size: clamp(2.75rem, 9vw, 4rem); /* Mejorado para móvil */
      margin-bottom: 2rem;
      line-height: 1.15; /* Mejor espaciado en móvil */
      padding: 0 0.5rem; /* Padding lateral para evitar cortes */
    }

    .typing-line {
      white-space: normal; /* Permitir wrap si es necesario */
    }

    .hero-description {
      font-size: 1.125rem;
      margin-bottom: 2rem;
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
      margin-bottom: 2rem;
    }

    .btn-primary,
    .btn-secondary {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding: 1.5rem 0 1rem;
    }

    .logo-wrapper {
      margin-bottom: 1.5rem;
    }

    .logo-wrapper::before {
      width: 90px;
      height: 90px;
      filter: blur(15px);
    }

    .logo-wrapper::after {
      width: 75px;
      height: 75px;
    }

    .logo-wrapper img {
      width: 60px;
      height: 60px;
    }

    .hero-title {
      font-size: clamp(2rem, 10vw, 2.75rem);
      line-height: 1.2; /* Mejor para texto pequeño */
      margin-bottom: 1.5rem;
      padding: 0 0.25rem; /* Menos padding en pantallas muy pequeñas */
    }

    .hero-description {
      font-size: 1rem;
    }

    .btn-primary,
    .btn-secondary {
      padding: 0.75rem 1.5rem;
      font-size: 0.95rem;
    }
  }

  /* Reducir animaciones en móvil para mejor rendimiento */
  @media (max-width: 768px) {
    .logo-wrapper img {
      animation: floatRotate 8s ease-in-out infinite; /* Más lenta */
    }

    
    .logo-wrapper::after {
      animation: rotate 5s linear infinite; /* Más lenta */
    }
  }

</style>
