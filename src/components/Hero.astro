---
import LogosSlider from './LogosSlider.astro';

export interface Props {
  pageSlug?: string;
  customTitle?: string;
  customDescription?: string;
  titleLine1?: string;
  titleLine2?: string;
  logoUrl?: string;
  logoAlt?: string;
}

const {
  pageSlug = '/',
  customTitle,
  customDescription,
  titleLine1,
  titleLine2,
  logoUrl = 'https://cms.blixel.es/wp-content/uploads/2025/05/cropped-Copia-de-BLIXEL-STUDIO_logo-500500.png',
  logoAlt = 'BLIXEL logo'
} = Astro.props;

// Query para obtener datos de la página
const GQL = `
  query GetPageData($slug: ID!) {
    page(id: $slug, idType: URI) {
      title
      content
      seo {
        title
        metaDesc
        opengraphTitle
        opengraphDescription
      }
      featuredImage {
        node {
          sourceUrl
          altText
        }
      }
    }
  }
`;

let pageTitle = customTitle || 'Inteligencia Artificial para Empresas';
let pageDescription = customDescription || 'Automatización Inteligente para tu Empresa';

// Solo ejecutar GraphQL en desarrollo
if (import.meta.env.DEV && import.meta.env.PUBLIC_WP_GRAPHQL_URL) {
  try {
    const res = await fetch(import.meta.env.PUBLIC_WP_GRAPHQL_URL, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ 
        query: GQL,
        variables: { slug: pageSlug }
      })
    });

    if (res.ok) {
      const result = await res.json();
      const page = result.data?.page;
      
      if (page && !customTitle && !customDescription) {
        pageTitle = page.title || pageTitle;
        pageDescription = page.seo?.metaDesc || pageDescription;
      }
    }
  } catch (error) {
    // Usar valores por defecto
  }
}

// Dividir título en líneas
let actualTitleLine1 = titleLine1;
let actualTitleLine2 = titleLine2;

if (!titleLine1 || !titleLine2) {
  if (pageTitle.includes('?')) {
    const parts = pageTitle.split('?');
    actualTitleLine1 = parts[0] + '?';
    actualTitleLine2 = parts[1]?.trim() || '';
  } else {
    const words = pageTitle.split(' ');
    const midPoint = Math.ceil(words.length / 2);
    actualTitleLine1 = words.slice(0, midPoint).join(' ');
    actualTitleLine2 = words.slice(midPoint).join(' ');
  }
}
---

<section class="hero">
  <div class="container">
    <!-- Logo -->
    <div class="logo-wrapper">
      <img src={logoUrl} alt={logoAlt} />
    </div>

    <!-- Título con efecto typing -->
    <h1 class="hero-title">
      <span class="line-1 typing-line" data-text={actualTitleLine1}>{actualTitleLine1}</span>
      <span class="line-2 typing-line" data-text={actualTitleLine2}>{actualTitleLine2}</span>
    </h1>

    <!-- Descripción -->
    <p class="hero-description">
      {pageDescription}
    </p>

    <!-- CTAs -->
    <div class="hero-actions">
      <a href="#contacto" class="btn-primary">
        Contactar
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
      
      <a href="https://calendly.com/blixel" target="_blank" rel="noopener noreferrer" class="btn-secondary">
        Agendar Llamada
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="16" y1="2" x2="16" y2="6"></line>
          <line x1="8" y1="2" x2="8" y2="6"></line>
          <line x1="3" y1="10" x2="21" y2="10"></line>
        </svg>
      </a>
    </div>
  </div>

  <!-- Slider de logos -->
  <LogosSlider />
</section>

<style>
  /* Hero con márgenes ajustados */
  .hero {
    background: #000000;
    padding: 3rem 0 2rem; /* Un poco más de padding arriba */
    min-height: auto;
    text-align: center;
    margin-top: -80px;
    padding-top: calc(80px + 3rem); /* Más espacio después del header */
    position: relative;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Logo */
  .logo-wrapper {
    margin-bottom: 2rem; /* Un poco más de margen */
  }

  .logo-wrapper img {
    width: 70px;
    height: 70px;
    object-fit: contain;
    filter: brightness(0) invert(1);
    opacity: 0.9;
  }

  /* Título más grande con efecto typing */
  .hero-title {
    font-family: 'Inter', -apple-system, sans-serif;
    font-size: clamp(3rem, 6vw, 5.5rem); /* Más grande */
    font-weight: 800;
    line-height: 1;
    color: #ffffff;
    margin: 0 0 2rem; /* Más margen abajo */
    letter-spacing: -0.04em;
  }

  .typing-line {
    display: block;
    position: relative;
    overflow: hidden;
  }

  .line-1 {
    margin-bottom: 0.3em;
  }

  /* Efecto typing */
  .typing-line::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: #000000;
    animation: typing 2s steps(40) forwards;
  }

  .line-1::after {
    animation-delay: 0.5s;
  }

  .line-2::after {
    animation-delay: 2s;
  }

  /* Cursor eliminado para un look más limpio */

  @keyframes typing {
    to {
      left: 100%;
    }
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  /* Descripción */
  .hero-description {
    font-size: 1.25rem;
    color: #9ca3af;
    max-width: 700px;
    margin: 0 auto 2.5rem; /* Más margen */
    line-height: 1.5;
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards;
    animation-delay: 3s;
  }

  /* Botones */
  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 3rem; /* Espacio para el slider */
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards;
    animation-delay: 3.2s;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .btn-primary,
  .btn-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .btn-primary {
    background: #ffffff;
    color: #000000;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 255, 255, 0.2);
  }

  .btn-secondary {
    background: transparent;
    color: #ffffff;
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.5);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      padding: 2rem 0 1.5rem;
      margin-top: -80px;
      padding-top: calc(80px + 2rem);
    }

    .container {
      padding: 0 1rem;
    }

    .logo-wrapper img {
      width: 60px;
      height: 60px;
    }

    .hero-title {
      font-size: clamp(2.5rem, 8vw, 3.5rem); /* Ajustado para móvil */
      margin-bottom: 1.5rem;
    }

    .hero-description {
      font-size: 1.125rem;
      margin-bottom: 2rem;
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
      margin-bottom: 2rem;
    }

    .btn-primary,
    .btn-secondary {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding: 1.5rem 0 1rem;
    }

    .logo-wrapper {
      margin-bottom: 1.5rem;
    }

    .logo-wrapper img {
      width: 50px;
      height: 50px;
    }

    .hero-title {
      font-size: 2.25rem;
    }

    .hero-description {
      font-size: 1rem;
    }

    .btn-primary,
    .btn-secondary {
      padding: 0.75rem 1.5rem;
      font-size: 0.95rem;
    }
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Reiniciar animación de typing al hacer hover
  const typingLines = document.querySelectorAll('.typing-line');
  
  typingLines.forEach(line => {
    line.addEventListener('mouseenter', function() {
      // Reiniciar la animación
      this.style.animation = 'none';
      setTimeout(() => {
        this.style.animation = '';
      }, 10);
    });
  });
});
</script>
