  }

  /* Gradientes para fade en los bordes */
  .logos-slider::before,
  .logos-slider::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100px;
    z-index: 2;
    pointer-events: none;
  }

  .logos-slider::before {
