import { graphQLClient, gql } from '../graphql/client.ts';
import TestConnection from './TestConnection.astro';

// Funci√≥n para decodificar HTML entities
function decodeHtmlEntities(text: string): string {
  if (!text) return '';
  return text
    .replace(/&#8211;/g, '-')
    .replace(/&#8212;/g, '-')
    .replace(/&#8216;/g, "'")
    .replace(/&#8217;/g, "'")
    .replace(/&#8220;/g, '"')
    .replace(/&#8221;/g, '"')
    .replace(/&#8230;/g, '...')
    .replace(/&amp;/g, '&')
    .replace(/&lt;/g, '<')
    .replace(/&gt;/g, '>')
    .replace(/&quot;/g, '"');
}

let siteTitle = "Blixel";
let homeTitle = "Bienvenido a Blixel";
let homeContent = `
  <h2>Transformamos tu empresa con inteligencia artificial</h2>
  <p>En Blixel, nos especializamos en implementar soluciones de IA que revolucionan la forma en que las empresas operan y crecen.</p>
  
  <h3>üöÄ Nuestros Servicios</h3>
  <ul>
    <li><strong>Automatizaci√≥n Inteligente:</strong> Optimizamos procesos empresariales con IA</li>
    <li><strong>An√°lisis de Datos:</strong> Convertimos datos en insights accionables</li>
    <li><strong>Chatbots y Asistentes:</strong> Mejoramos la atenci√≥n al cliente 24/7</li>
    <li><strong>Desarrollo Web:</strong> Sitios web modernos y optimizados</li>
  </ul>
  
  <h3>üí° ¬øPor qu√© elegir Blixel?</h3>
  <p>Combinamos experiencia t√©cnica con un enfoque centrado en resultados. Nuestro equipo trabaja contigo para identificar oportunidades de mejora y implementar soluciones que generen valor real.</p>
`;
let posts = [];
let pages = [];
let isLoading = true;

try {
  console.log('üîÑ Intentando conectar con WordPress...');
  
  // Query GraphQL m√°s simple y robusto
  const SITE_DATA_QUERY = gql`
    query GetSiteData {
      generalSettings {
        title
        description
      }
      posts(first: 6, where: {status: PUBLISH}) {
        nodes {
          id
          title
          excerpt
          slug
          date
          featuredImage {
            node {
              sourceUrl
              altText
            }
          }
        }
      }
      pages(first: 10, where: {status: PUBLISH}) {
        nodes {
          id
          title
          content
          slug
        }
      }
    }
  `;

  const result = await graphQLClient.query({
    query: SITE_DATA_QUERY,
    fetchPolicy: 'no-cache'
  });

  console.log('‚úÖ Respuesta GraphQL recibida:', result);

  // Procesar datos del sitio
  if (result.data?.generalSettings?.title) {
    siteTitle = decodeHtmlEntities(result.data.generalSettings.title);
    console.log('üìù T√≠tulo del sitio:', siteTitle);
  }

  // Procesar p√°ginas
  if (result.data?.pages?.nodes && result.data.pages.nodes.length > 0) {
    pages = result.data.pages.nodes;
    console.log('üìÑ P√°ginas encontradas:', pages.length);
    
    // Buscar p√°gina home o principal
    const homePage = pages.find(page => 
      page.slug === 'home' || 
      page.slug === 'inicio' || 
      page.slug === 'principal' ||
      page.title?.toLowerCase().includes('inicio') ||
      page.title?.toLowerCase().includes('home')
    );
    
    if (homePage && homePage.content) {
      homeTitle = decodeHtmlEntities(homePage.title || 'Inicio');
      homeContent = homePage.content;
      console.log('üè† P√°gina home encontrada:', homeTitle);
    } else {
      // Si no hay p√°gina espec√≠fica, usar la primera p√°gina con contenido
      const firstPageWithContent = pages.find(page => page.content && page.content.trim().length > 100);
      if (firstPageWithContent) {
        homeTitle = decodeHtmlEntities(firstPageWithContent.title || 'Bienvenido');
        homeContent = firstPageWithContent.content;
        console.log('üìÑ Usando primera p√°gina con contenido:', homeTitle);
      }
    }
  }

  // Procesar posts
  if (result.data?.posts?.nodes) {
    posts = result.data.posts.nodes;
    console.log('üìù Posts encontrados:', posts.length);
  }
  
  isLoading = false;

} catch (error) {
  console.error('‚ùå Error al obtener datos de WordPress:', error);
  isLoading = false;
  
  // Fallback: intentar con API REST
  try {
    console.log('üîÑ Intentando con API REST como fallback...');
    const baseResponse = await fetch('https://blixel.es/wp-json/');
    if (baseResponse.ok) {
      const baseData = await baseResponse.json();
      if (baseData.name) {
        siteTitle = decodeHtmlEntities(baseData.name);
        console.log('‚úÖ T√≠tulo obtenido via REST:', siteTitle);
      }
    }
    
    // Intentar obtener p√°ginas via REST
    const pagesResponse = await fetch('https://blixel.es/wp-json/wp/v2/pages?per_page=5');
    if (pagesResponse.ok) {
      const pagesData = await pagesResponse.json();
      console.log('üìÑ P√°ginas via REST:', pagesData.length);
      
      if (pagesData.length > 0) {
        const restHomePage = pagesData.find(page => 
          page.slug === 'home' || page.slug === 'inicio'
        ) || pagesData[0];
        
        if (restHomePage) {
          homeTitle = decodeHtmlEntities(restHomePage.title.rendered || 'Inicio');
          homeContent = restHomePage.content.rendered || homeContent;
          console.log('üè† P√°gina home via REST:', homeTitle);
        }
      }
    }
  } catch (restError) {
    console.error('‚ùå Error con API REST:', restError);
  }
}

const { className = 'home-page' } = Astro.props;
---

<div class={className}>
  <!-- Componente de prueba de conexi√≥n (temporal) -->
  <TestConnection />
  
  <header>
    <h1>{homeTitle}</h1>
  </header>
  
  <main>
    {!isLoading ? (
      <div class="content" set:html={homeContent}></div>
    ) : (
      <div class="loading-container">
        <div class="loading-spinner"></div>
        <p>Cargando contenido desde blixel.es...</p>
      </div>
    )}
    
    {posts.length > 0 && (
      <section class="posts-section">
        <h2>Publicaciones Recientes</h2>
        <div class="posts-grid">
          {posts.map((post) => (
            <article class="post-card">
              {post.featuredImage?.node?.sourceUrl && (
                <div class="post-image">
                  <img 
                    src={post.featuredImage.node.sourceUrl} 
                    alt={post.featuredImage.node.altText || post.title} 
                  />
                </div>
              )}
              <div class="post-content">
                <h3>{decodeHtmlEntities(post.title)}</h3>
                {post.excerpt && (
                  <div class="post-excerpt" set:html={post.excerpt}></div>
                )}
                <a href={`/blog/${post.slug}`} class="read-more">Leer m√°s ‚Üí</a>
              </div>
            </article>
          ))}
        </div>
      </section>
    )}
    
    {/* Secci√≥n de debugging - mostrar informaci√≥n de las p√°ginas encontradas */}
    {pages.length > 0 && (
      <details class="debug-info">
        <summary>üîç Informaci√≥n de depuraci√≥n (P√°ginas encontradas)</summary>
        <ul>
          {pages.map((page) => (
            <li>
              <strong>{page.title}</strong> - Slug: {page.slug} - ID: {page.id}
              {page.content && <span> - Contenido: {page.content.length} caracteres</span>}
            </li>
          ))}
        </ul>
      </details>
    )}
  </main>
</div>

