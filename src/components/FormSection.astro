<style>
  .contact-form-section {
    padding: 6rem 0;
    background: #050505;
    position: relative;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .form-content {
    text-align: center;
  }

  .form-header {
    margin-bottom: 3rem;
  }

  .section-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: rgba(96, 165, 250, 0.1);
    border: 1px solid rgba(96, 165, 250, 0.2);
    border-radius: 50px;
    color: #60a5fa;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 2rem;
  }

  .form-title {
    font-family: 'Inter Tight', sans-serif;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    background: linear-gradient(135deg, #60a5fa 0%, #a855f7 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1.5rem;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  .form-description {
    font-size: 1.25rem;
    color: #a3a3a3;
    line-height: 1.6;
    max-width: 700px;
    margin: 0 auto;
  }

  .form-wrapper {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 20px;
    padding: 3rem;
    backdrop-filter: blur(10px);
    margin-bottom: 3rem;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
  }

  .iframe-container {
    position: relative;
    background: #ffffff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  }

  .gravity-form-iframe {
    background: #ffffff;
    display: block;
  }

  /* Loading state */
  .iframe-container::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 40px;
    height: 40px;
    border: 3px solid rgba(96, 165, 250, 0.3);
    border-top-color: #60a5fa;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    z-index: 0;
  }

  .gravity-form-iframe.loaded + .iframe-container::before {
    display: none;
  }

  @keyframes spin {
    to { transform: translate(-50%, -50%) rotate(360deg); }
  }

  .trust-badges {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1.5rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: #d4d4d4;
    font-size: 0.95rem;
    justify-content: center;
  }

  .trust-icon {
    width: 40px;
    height: 40px;
    background: rgba(96, 165, 250, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .contact-form-section {
      padding: 4rem 0;
    }

    .container {
      padding: 0 1rem;
    }

    .form-wrapper {
      padding: 2rem 1.5rem;
    }

    .gravity-form-iframe {
      height: 850px;
    }

    .trust-badges {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }

  @media (max-width: 480px) {
    .form-title {
      font-size: 2rem;
    }

    .form-description {
      font-size: 1.125rem;
    }

    .gravity-form-iframe {
      height: 900px;
    }

    .form-wrapper {
      padding: 1.5rem 1rem;
    }
  }

  /* Estilos para formularios de Gravity Forms dentro del iframe */
  .gform_wrapper {
    margin: 0 !important;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const iframe = document.querySelector('.gravity-form-iframe');
    
    if (iframe) {
      // Marcar como cargado
      iframe.addEventListener('load', function() {
        this.classList.add('loaded');
        console.log('‚úÖ Formulario Gravity Forms cargado');
        
        // Intentar ajustar altura autom√°ticamente
        try {
          // Esto solo funcionar√° si no hay restricciones CORS
          const iframeDocument = iframe.contentDocument || iframe.contentWindow.document;
          const height = iframeDocument.body.scrollHeight;
          if (height > 0) {
            iframe.style.height = height + 50 + 'px';
          }
        } catch (e) {
          // CORS restriction - mantener altura fija
          console.log('‚ÑπÔ∏è Altura autom√°tica no disponible (CORS)');
        }
      });

      // Manejar errores
      iframe.addEventListener('error', function() {
        console.error('‚ùå Error al cargar el formulario');
        
        // Mostrar mensaje alternativo
        const container = this.parentElement;
        container.innerHTML = `
          <div style="padding: 3rem; text-align: center;">
            <p style="color: #ef4444; margin-bottom: 1rem;">
              No se pudo cargar el formulario.
            </p>
            <a href="mailto:info@blixel.es" style="color: #60a5fa; text-decoration: underline;">
              Env√≠anos un email directamente
            </a>
          </div>
        `;
      });
    }

    // Analytics
    if (typeof gtag !== 'undefined') {
      gtag('event', 'form_view', {
        'event_category': 'engagement',
        'event_label': 'Gravity Forms - Diagn√≥stico IA'
      });
    }
  });

  // Intentar comunicaci√≥n con el iframe para manejar env√≠os
  window.addEventListener('message', function(event) {
    // Verificar origen por seguridad
    if (event.origin !== 'https://cms.blixel.es') return;
    
    // Manejar diferentes tipos de mensajes del formulario
    if (event.data.type === 'gform_submission_success') {
      console.log('‚úÖ Formulario enviado con √©xito');
      
      // Scroll suave al mensaje de confirmaci√≥n
      const formSection = document.getElementById('contact-form');
      if (formSection) {
        formSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
      
      // Analytics
      if (typeof gtag !== 'undefined') {
        gtag('event', 'form_submit', {
          'event_category': 'engagement',
          'event_label': 'Gravity Forms - Diagn√≥stico IA'
        });
      }
    }
  });
</script>
