    }
    100% {
      offset-distance: 100%;
    }
  }

  /* Clase base para elementos con borde animado */
  .border-beam {
    position: relative;
    overflow: hidden;
  }

  .border-beam::before {
    content: '';
    position: absolute;
    inset: 0;
    padding: 2px; /* Grosor del borde */
    background: linear-gradient(90deg, 
      transparent, 
      #60a5fa, 
