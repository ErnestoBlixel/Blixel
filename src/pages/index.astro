<script>
  // Manejar error de carga del logo
  document.addEventListener('DOMContentLoaded', () => {
    const headerLogo = document.querySelector('.header-logo');
    
    if (headerLogo) {
      headerLogo.onerror = function() {
        console.error('Error cargando el logo del header');
        const logoLink = document.querySelector('.logo-link');
        if (logoLink) {
          logoLink.innerHTML = '<span style="color: #60a5fa; font-size: 1.5rem; font-weight: bold;">BLIXEL</span>';
        }
      };
      
      if (headerLogo.complete && headerLogo.naturalHeight === 0) {
        headerLogo.onerror();
      }
    }

    // Toggle de modo noche (sin funcionalidad por ahora)
    const darkModeToggle = document.getElementById('darkModeToggle');
    if (darkModeToggle) {
      darkModeToggle.addEventListener('click', () => {
        // Solo animación visual por ahora
        darkModeToggle.classList.toggle('dark');
        
        // Feedback visual
        const thumb = darkModeToggle.querySelector('.toggle-thumb');
        if (thumb) {
          thumb.style.transform = darkModeToggle.classList.contains('dark') 
            ? 'translateX(30px) scale(0.95)' 
            : 'translateX(0) scale(0.95)';
          
          setTimeout(() => {
            thumb.style.transform = darkModeToggle.classList.contains('dark') 
              ? 'translateX(30px)' 
              : 'translateX(0)';
          }, 150);
        }
        
        // Aquí irá la lógica del modo noche en el futuro
        console.log('Dark mode toggle clicked:', darkModeToggle.classList.contains('dark'));
      });
    }

    // Sistema de FAQ interactivo
    const faqItems = document.querySelectorAll('.faq-item');
    
    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      
      question.addEventListener('click', () => {
        // Cerrar otros FAQs abiertos
        faqItems.forEach(otherItem => {
          if (otherItem !== item) {
            otherItem.classList.remove('active');
          }
        });
        
        // Toggle del FAQ actual
        item.classList.toggle('active');
      });
    });

    // Formulario nativo ya está cargado, no necesitamos JavaScript adicional
  });

  // El formulario ahora es nativo y no requiere funciones de carga adicionales
</script>
