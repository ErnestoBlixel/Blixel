---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';

// Datos básicos para el sitio
const logoUrl = 'https://cms.blixel.es/wp-content/uploads/2025/05/cropped-Copia-de-BLIXEL-STUDIO_logo-500500.png';
const pageTitle = 'Inteligencia Artificial para Empresas | Blixel';
const pageDescription = 'Implementamos soluciones de IA para empresas con ROI garantizado en 90 días.';
---

<Layout 
  logoUrl={logoUrl} 
  logoAlt="BLIXEL logo"
  title={pageTitle}
  description={pageDescription}
>
  <!-- Script para Partículas Geométricas 3D -->
  <script is:inline>
    // Cargar el nuevo sistema de partículas
    document.addEventListener('DOMContentLoaded', () => {
      const script = document.createElement('script');
      script.src = '/js/geometric-particles.js';
      document.body.appendChild(script);
    });
  </script>

  <!-- HERO SECTION -->
  <Hero 
    logoUrl={logoUrl}
    logoAlt="BLIXEL logo"
    customTitle="Aplica Inteligencia Artificial en tu empresa"
    customDescription="Inteligencia artificial en tu empresa HOY o quiebras mañana. ROI en 90 días. Mientras dudas, tu competencia factura."
    titleLine1="Aplica Inteligencia Artificial"
    titleLine2="en tu empresa"
  />

  <!-- 
    AQUÍ PUEDES AÑADIR MÁS SECCIONES DESPUÉS 
    Por ejemplo:
    - Servicios
    - Por qué ahora
    - Casos de éxito
    - FAQ
    - Formulario
  -->

</Layout>

<style>
  /* ==================== ESTILOS GLOBALES ==================== */
  body {
    background: #000000;
    color: #ffffff;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    overflow-x: hidden;
  }

  /* Canvas de partículas geométricas */
  #geometric-particles-canvas {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 0;
    pointer-events: auto;
  }

  /* ==================== RESPONSIVE ==================== */
  @media (max-width: 768px) {
    body {
      font-size: 16px;
    }
  }
</style>
