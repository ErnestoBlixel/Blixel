---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import MagicUICards from '../components/magic-cards-new/MagicCardsFINAL.astro';
import ContactForm from '../components/ContactForm.astro';

// Datos básicos para el sitio
const logoUrl = '/logos/LOGO AZUL BLIXEL .png';
const pageTitle = 'Inteligencia Artificial para Empresas | Blixel';
const pageDescription = 'Implementamos soluciones de IA para empresas con ROI garantizado en 90 días.';
---

<Layout 
  logoUrl={logoUrl} 
  logoAlt="BLIXEL logo"
  title={pageTitle}
  description={pageDescription}
>
  <!-- HEADER SIMPLE -->
  <header class="simple-header">
    <div class="header-container">
      <!-- Logo a la izquierda -->
      <a href="/" class="logo-link">
        <img 
          src={logoUrl} 
          alt="BLIXEL logo" 
          class="header-logo"
          loading="eager"
          crossorigin="anonymous"
        />
      </a>
      
      <!-- Toggle modo noche a la derecha -->
      <div class="dark-mode-toggle">
        <button class="toggle-btn" id="darkModeToggle" aria-label="Toggle dark mode">
          <div class="toggle-track">
            <div class="toggle-thumb">
              <!-- Icono sol -->
              <svg class="icon-sun" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="5"></circle>
                <line x1="12" y1="1" x2="12" y2="3"></line>
                <line x1="12" y1="21" x2="12" y2="23"></line>
                <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
                <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
                <line x1="1" y1="12" x2="3" y2="12"></line>
                <line x1="21" y1="12" x2="23" y2="12"></line>
                <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
                <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
              </svg>
              <!-- Icono luna -->
              <svg class="icon-moon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
              </svg>
            </div>
          </div>
        </button>
      </div>
    </div>
  </header>

  <!-- HERO SECTION -->
  <Hero 
    logoUrl={logoUrl}
    logoAlt="BLIXEL logo"
    customTitle="Aplica Inteligencia Artificial en tu empresa"
    customDescription="Inteligencia artificial en tu empresa HOY o quiebras mañana. ROI en 90 días. Mientras dudas, tu competencia factura."
    titleLine1="Aplica Inteligencia Artificial"
    titleLine2="en tu empresa"
  />

  <!-- SECCIÓN DE SERVICIOS -->
  <section class="services-section">
    <div class="services-container">
      <!-- Título principal -->
      <div class="services-header">
        <h2 class="services-title">
          Nuestras soluciones de <span class="title-highlight">inteligencia artificial</span> para empresas
        </h2>
        <p class="services-description">
          Te ayudamos a aplicar la Inteligencia Artificial donde marca la diferencia en tu empresa:
          procesos, decisiones y clientes
        </p>
      </div>

      <!-- Grid de servicios -->
      <div class="services-grid">
        <!-- Servicio 1: Formación aplicada IA -->
        <div class="service-card" data-service="1">
          <div class="service-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="8" r="7"></circle>
              <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"></polyline>
            </svg>
          </div>
          <h3 class="service-title">Formación IA<br>para Empresas</h3>
          <p class="service-description">
            Convertimos a tu equipo en usuarios avanzados de IA. Formación práctica adaptada a tu sector con casos reales y herramientas específicas.
          </p>
          <div class="service-beam"></div>
        </div>

        <!-- Servicio 2: Automatización procesos -->
        <div class="service-card" data-service="2">
          <div class="service-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="3" y1="9" x2="21" y2="9"></line>
              <line x1="9" y1="21" x2="9" y2="9"></line>
            </svg>
          </div>
          <h3 class="service-title">Automatización<br>de Procesos</h3>
          <p class="service-description">
            Eliminamos tareas repetitivas de tu día a día. Conectamos sistemas, digitalizamos flujos y liberamos tiempo para lo importante.
          </p>
          <div class="service-beam"></div>
        </div>

        <!-- Servicio 3: Agentes inteligentes IA -->
        <div class="service-card" data-service="3">
          <div class="service-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="2" width="20" height="20" rx="2.18" ry="2.18"></rect>
              <line x1="7" y1="2" x2="7" y2="22"></line>
              <line x1="17" y1="2" x2="17" y2="22"></line>
              <line x1="2" y1="12" x2="22" y2="12"></line>
              <line x1="2" y1="7" x2="7" y2="7"></line>
              <line x1="2" y1="17" x2="7" y2="17"></line>
              <line x1="17" y1="17" x2="22" y2="17"></line>
              <line x1="17" y1="7" x2="22" y2="7"></line>
            </svg>
          </div>
          <h3 class="service-title">Agentes IA<br>Automatizados 24/7</h3>
          <p class="service-description">
            Creamos asistentes que trabajan 24/7. Atención al cliente automatizada, análisis de datos y generación de informes sin intervención humana.
          </p>
          <div class="service-beam"></div>
        </div>

        <!-- Servicio 4: Desarrollo microSaaS -->
        <div class="service-card" data-service="4">
          <div class="service-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="2" width="20" height="20" rx="2.18" ry="2.18"></rect>
              <line x1="7" y1="2" x2="7" y2="22"></line>
              <line x1="17" y1="2" x2="17" y2="22"></line>
              <line x1="2" y1="12" x2="22" y2="12"></line>
              <line x1="2" y1="7" x2="7" y2="7"></line>
              <line x1="2" y1="17" x2="7" y2="17"></line>
              <line x1="17" y1="17" x2="22" y2="17"></line>
              <line x1="17" y1="7" x2="22" y2="7"></line>
            </svg>
          </div>
          <h3 class="service-title">Desarrollo SaaS<br>con IA Integrada</h3>
          <p class="service-description">
            Construimos soluciones concretas que resuelven problemas reales. Apps a medida con IA para optimizar áreas clave de tu negocio.
          </p>
          <div class="service-beam"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- SECCIÓN "POR QUÉ EL MOMENTO ES AHORA" -->
  <section class="urgency-section">
    <div class="urgency-container">
      <!-- Contenido principal -->
      <div class="urgency-content">
        <!-- Título principal con animación -->
        <div class="urgency-title-container">
          <h2 class="urgency-title">
            <span class="title-regular">¿Por qué el</span>
            <br>
            <span class="title-regular">momento es</span>
            <br>
            <span class="title-highlight">AHORA?</span>
          </h2>
        </div>

        <!-- Descripción -->
        <div class="urgency-description-container">
          <p class="urgency-description">
            La Inteligencia Artificial no es el futuro. Es el presente que está 
            transformando empresas cada día. Mientras lees esto, tu competencia 
            ya está automatizando procesos, mejorando su eficiencia y capturando más mercado.
          </p>
          <p class="urgency-description-secondary">
            Cada día sin IA es dinero perdido en tareas automatizables, talento 
            desperdiciado en procesos obsoletos y terreno cedido a competidores más 
            ágiles. La pregunta no es si implementar IA, sino cuándo. Y la respuesta 
            es clara: el momento es ahora.
          </p>
        </div>
      </div>

      <!-- Estadísticas con animación -->
      <div class="urgency-stats">
        <!-- Stat 1: 73% -->
        <div class="stat-card stat-1">
          <div class="stat-number-container">
            <span class="stat-number">73%</span>
          </div>
          <div class="stat-text">
            <span class="stat-primary">de empresas con IA reportan</span>
            <span class="stat-secondary">+25% en productividad</span>
          </div>
        </div>

        <!-- Stat 2: 50% -->
        <div class="stat-card stat-2">
          <div class="stat-number-container">
            <span class="stat-number">50%</span>
          </div>
          <div class="stat-text">
            <span class="stat-primary">de trabajos administrativos</span>
            <span class="stat-secondary">desaparecerán en 2 años</span>
          </div>
        </div>

        <!-- Stat 3: 3x -->
        <div class="stat-card stat-3">
          <div class="stat-number-container">
            <span class="stat-number">3x</span>
          </div>
          <div class="stat-text">
            <span class="stat-primary">más rápido avanzan las empresas</span>
            <span class="stat-secondary">con IA</span>
          </div>
        </div>

        <!-- Stat 4: 2026 -->
        <div class="stat-card stat-4">
          <div class="stat-number-container">
            <span class="stat-number">2026</span>
          </div>
          <div class="stat-text">
            <span class="stat-primary">empresas sin IA no sobrevivirán</span>
            <span class="stat-secondary">más allá</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- SECCIÓN DE EJEMPLOS ANIMADOS CON MAGIC UI - MOVIDA AL FINAL -->
  <section class="examples-section">
    <div class="examples-container">
      <div class="examples-grid">
        <!-- Columna de tarjetas animadas con Magic UI -->
        <MagicUICards />

        <!-- Columna de texto -->
        <div class="text-content">
          <h2 class="examples-title">
            Pon a trabajar la <span class="title-highlight">IA</span><br>
            en tu empresa.
          </h2>
          
          <p class="examples-description">
            Mientras lees esto, miles de empresas están ahorrando tiempo y dinero con IA. Sus sistemas trabajan 24/7 procesando facturas, atendiendo clientes, generando informes y tomando decisiones inteligentes.
          </p>

          <div class="stats-grid">
            <div class="stat-item">
              <div class="stat-card-mini">
                <strong class="stat-number">24/7</strong>
                <span class="stat-label">Sin descansos</span>
              </div>
            </div>
            <div class="stat-item">
              <div class="stat-card-mini">
                <strong class="stat-number">-80%</strong>
                <span class="stat-label">Menos errores</span>
              </div>
            </div>
            <div class="stat-item">
              <div class="stat-card-mini">
                <strong class="stat-number">10x</strong>
                <span class="stat-label">Más rápido</span>
              </div>
            </div>
          </div>

          <a href="#contacto" class="examples-cta">
            <span>Empieza a automatizar hoy</span>
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- SECCIÓN DE PREGUNTAS FRECUENTES -->
  <section class="faq-section">
    <div class="faq-container">
      <!-- Título de la sección -->
      <div class="faq-header">
        <h2 class="faq-title">
          Preguntas <span class="title-highlight">frecuentes</span>
        </h2>
        <p class="faq-description">
          Resolvemos las dudas más comunes sobre implementación de IA en empresas
        </p>
      </div>

      <!-- Grid de preguntas y respuestas -->
      <div class="faq-grid">
        <!-- FAQ 1 -->
        <div class="faq-item" data-faq="1">
          <button class="faq-question">
            <span>¿Cuánto tiempo tarda implementar IA en mi empresa?</span>
            <svg class="faq-chevron" width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M6 8l4 4 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <div class="faq-answer">
            <p>Dependiendo del proyecto, entre 2-8 semanas. Proyectos simples como chatbots o automatización de emails pueden estar listos en 2-3 semanas. Soluciones más complejas como análisis predictivo o sistemas personalizados pueden tomar 6-8 semanas. Garantizamos ROI visible en los primeros 90 días.</p>
          </div>
        </div>

        <!-- FAQ 2 -->
        <div class="faq-item" data-faq="2">
          <button class="faq-question">
            <span>¿Qué cuesta implementar inteligencia artificial?</span>
            <svg class="faq-chevron" width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M6 8l4 4 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <div class="faq-answer">
            <p>Los costes varían según el alcance: desde 3.000€ para automatizaciones básicas hasta 25.000€ para soluciones empresariales complejas. Ofrecemos consulta gratuita para evaluar tu caso y crear un presupuesto personalizado. Todos nuestros proyectos incluyen formación del equipo y soporte post-implementación.</p>
          </div>
        </div>

        <!-- FAQ 3 -->
        <div class="faq-item" data-faq="3">
          <button class="faq-question">
            <span>¿Necesito conocimientos técnicos para usar IA?</span>
            <svg class="faq-chevron" width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M6 8l4 4 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <div class="faq-answer">
            <p>No. Diseñamos todas nuestras soluciones para ser intuitivas y fáciles de usar. Además, incluimos formación completa para tu equipo. Nuestras interfaces son tan simples como usar WhatsApp o Gmail. Tu equipo estará operando con confianza en pocos días.</p>
          </div>
        </div>

        <!-- FAQ 4 -->
        <div class="faq-item" data-faq="4">
          <button class="faq-question">
            <span>¿Qué pasa si la IA no funciona como esperaba?</span>
            <svg class="faq-chevron" width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M6 8l4 4 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <div class="faq-answer">
            <p>Ofrecemos garantía de ROI en 90 días. Si no ves resultados medibles en ese tiempo, ajustamos la solución sin coste adicional. Además, proporcionamos 6 meses de soporte incluido y optimización continua. Tu éxito es nuestro éxito.</p>
          </div>
        </div>

        <!-- FAQ 5 -->
        <div class="faq-item" data-faq="5">
          <button class="faq-question">
            <span>¿Puede la IA integrarse con mis sistemas actuales?</span>
            <svg class="faq-chevron" width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M6 8l4 4 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <div class="faq-answer">
            <p>Sí, trabajamos con todos los sistemas populares: CRM (Salesforce, HubSpot), ERP (SAP, Odoo), e-commerce (Shopify, WooCommerce), bases de datos, APIs y herramientas de oficina. Si tienes sistemas personalizados, creamos conectores a medida. La integración es parte de nuestro servicio estándar.</p>
          </div>
        </div>

        <!-- FAQ 6 -->
        <div class="faq-item" data-faq="6">
          <button class="faq-question">
            <span>¿Qué tipos de procesos se pueden automatizar?</span>
            <svg class="faq-chevron" width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M6 8l4 4 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <div class="faq-answer">
            <p>Prácticamente cualquier proceso repetitivo: procesamiento de facturas, atención al cliente, clasificación de emails, generación de informes, gestión de inventario, análisis de datos, programación de citas, seguimiento de leads, control de calidad y mucho más. Si lo haces manualmente y es repetitivo, probablemente lo podemos automatizar.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- SECCIÓN DE FORMULARIO DE CONTACTO -->
  <section id="contact-form" class="contact-form-section">
    <div class="contact-form-container">
      <!-- Header de la sección -->
      <div class="contact-form-header">
        <h2 class="contact-form-title">
          ¿Listo para aplicar <span class="title-highlight">IA</span> en tu empresa?
        </h2>
        <p class="contact-form-description">
          Completa el formulario y te responderemos en menos de 24 horas con un plan personalizado para tu empresa.
        </p>
      </div>

      <!-- Formulario de contacto -->
      <div class="form-embed-container">
        <ContactForm />
      </div>

      <!-- Trust badges -->
      <div class="contact-trust-badges">
        <div class="contact-trust-item">
          <div class="contact-trust-icon">🔒</div>
          <span>Datos 100% seguros</span>
        </div>
        <div class="contact-trust-item">
          <div class="contact-trust-icon">⚡</div>
          <span>Respuesta en 24h</span>
        </div>
        <div class="contact-trust-item">
          <div class="contact-trust-icon">🎯</div>
          <span>Sin compromiso</span>
        </div>
      </div>
    </div>
  </section>

</Layout>

<style>
  /* ==================== HEADER SIMPLE ==================== */
  .simple-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    padding: 1rem 0;
  }

  /* ==================== SECCIÓN DE PREGUNTAS FRECUENTES ==================== */
  .faq-section {
    position: relative;
    padding: 8rem 0;
    background: #000000;
    overflow: hidden;
  }

  .faq-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 10;
  }

  .faq-header {
    text-align: center;
    margin-bottom: 5rem;
    animation: fadeInUp 0.8s ease-out;
  }

  .faq-title {
    font-family: 'Inter', -apple-system, sans-serif;
    font-size: clamp(2.5rem, 5vw, 4rem);
    line-height: 1.1;
    margin-bottom: 1.5rem;
    font-weight: 800;
    color: #ffffff;
  }

  .faq-description {
    font-size: 1.25rem;
    color: #9ca3af;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Grid de preguntas */
  .faq-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    max-width: 900px;
    margin: 0 auto;
  }

  /* Item individual de FAQ */
  .faq-item {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    animation: fadeInUp 0.6s ease-out backwards;
  }

  .faq-item:nth-child(1) { animation-delay: 0.1s; }
  .faq-item:nth-child(2) { animation-delay: 0.2s; }
  .faq-item:nth-child(3) { animation-delay: 0.3s; }
  .faq-item:nth-child(4) { animation-delay: 0.4s; }
  .faq-item:nth-child(5) { animation-delay: 0.5s; }
  .faq-item:nth-child(6) { animation-delay: 0.6s; }

  .faq-item:hover {
    border-color: rgba(96, 165, 250, 0.2);
    background: rgba(255, 255, 255, 0.04);
  }

  /* Botón de pregunta */
  .faq-question {
    width: 100%;
    background: none;
    border: none;
    padding: 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    cursor: pointer;
    text-align: left;
    transition: all 0.3s ease;
    color: #ffffff;
  }

  .faq-question span {
    font-size: 1.125rem;
    font-weight: 600;
    line-height: 1.4;
  }

  .faq-question:hover {
    color: #60a5fa;
  }

  .faq-question:focus {
    outline: 2px solid rgba(96, 165, 250, 0.3);
    outline-offset: -2px;
  }

  /* Chevron del FAQ */
  .faq-chevron {
    color: #9ca3af;
    transition: all 0.3s ease;
    transform: rotate(0deg);
    flex-shrink: 0;
  }

  .faq-item.active .faq-chevron {
    transform: rotate(180deg);
    color: #60a5fa;
  }

  /* Respuesta del FAQ */
  .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: all 0.3s ease;
    background: rgba(255, 255, 255, 0.02);
  }

  .faq-item.active .faq-answer {
    max-height: 300px;
  }

  .faq-answer p {
    padding: 0 2rem 2rem;
    margin: 0;
    font-size: 1rem;
    line-height: 1.6;
    color: #e5e7eb;
  }

  /* Efecto de borde animado para FAQ activo */
  .faq-item.active {
    border-color: rgba(96, 165, 250, 0.3);
    background: rgba(255, 255, 255, 0.04);
    box-shadow: 0 4px 20px rgba(96, 165, 250, 0.1);
  }

  .faq-item.active .faq-question {
    color: #60a5fa;
  }

  /* Responsive para FAQ */
  @media (max-width: 768px) {
    .faq-section {
      padding: 6rem 0;
    }

    .faq-container {
      padding: 0 1rem;
    }

    .faq-header {
      margin-bottom: 3rem;
    }

    .faq-title {
      font-size: 2.5rem;
    }

    .faq-description {
      font-size: 1.125rem;
    }

    .faq-question {
      padding: 1.5rem;
    }

    .faq-question span {
      font-size: 1rem;
    }

    .faq-answer p {
      padding: 0 1.5rem 1.5rem;
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .faq-section {
      padding: 4rem 0;
    }

    .faq-header {
