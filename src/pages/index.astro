<script>
  // Scripts del archivo original
  document.addEventListener('DOMContentLoaded', () => {
    // FAQ functionality
    const faqItems = document.querySelectorAll('.faq-item');
    
    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      
      question.addEventListener('click', () => {
        faqItems.forEach(otherItem => {
          if (otherItem !== item) {
            otherItem.classList.remove('active');
          }
        });
        
        item.classList.toggle('active');
      });
    });

    // Smooth scrolling
    const ctaButtons = document.querySelectorAll('[href="#contacto"]');
    
    ctaButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        e.preventDefault();
        const formulario = document.getElementById('contacto');
        if (formulario) {
          const headerHeight = document.querySelector('.simple-header')?.offsetHeight || 78;
          const offsetTop = formulario.offsetTop - headerHeight - 20;
          
          window.scrollTo({
            top: offsetTop,
            behavior: 'smooth'
          });
        }
      });
    });
  });
</script>