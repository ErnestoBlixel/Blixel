  /* Ajustar border-beam para elementos img */
  img.border-beam {
    position: relative;
    display: block;
  }

  img.border-beam::before {
    content: '';
    position: absolute;
    inset: -2px;
    padding: 2px;
    background: linear-gradient(90deg, 
      transparent, 
      #60a5fa, 
      #3b82f6, 
      transparent
    );
    border-radius: inherit;
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask-composite: xor;
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    pointer-events: none;
    z-index: -1;
  }

  img.border-beam::after {
    content: '';
    position: absolute;
    width: 100px;
    height: 100px;
    background: linear-gradient(90deg, transparent, #60a5fa, #3b82f6, transparent);
    border-radius: 50%;
    filter: blur(10px);
    animation: border-beam-rotate 4s linear infinite;
    opacity: 0.7;
    pointer-events: none;
    z-index: -1;
  }

  img.border-beam-hover:hover::after {
    animation-duration: 1s;
    opacity: 1;
  }

  img.border-beam-subtle::before {
    padding: 1px;
    opacity: 0.6;
  }

  img.border-beam-subtle::after {
    opacity: 0.4;
    filter: blur(15px);
  }

